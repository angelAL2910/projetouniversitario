@model  IEnumerable<KSI.Cobranza.Web.Models.ViewModels.PaymentPlan>
@{
    var webGrid = new WebGrid(source: Model, ajaxUpdateContainerId: "dvPPlan", canPage: true);
}
<div class="row  row-eq">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 row-eq">
        <div class="panel panel-info col-eq">
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-3 col-md-6 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="CompanyID">No. Cuenta:</label>
                            <input class="form-control" id="disabledInput" type="text" disabled="" value="@ViewBag.AccountNumber">
                            
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="CompanyID">Id:</label>
                            <input class="form-control" id="disabledInput" type="text" placeholder="Data" disabled="" value="@ViewBag.LoanNumber">
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="CompanyID">Nombre Cuenta:</label>
                            <input class="form-control" id="disabledInput" type="text" placeholder="Data" disabled="" value="@ViewBag.AccountName">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="table-responsive">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div id="dvPPlan">
                                @webGrid.GetHtml(tableStyle: "table table-striped car PhoneMail",
                                                headerStyle: "header-table",
                                                mode: WebGridPagerModes.All,                                       
                                                htmlAttributes: new { @id = "gvPaymentPlan" },
                                                columns: webGrid.Columns(
                                                                        webGrid.Column("Fecha", format: @<text>@String.Format(System.Globalization.CultureInfo.InvariantCulture, "{0:dd/MM/yyyy}", item.QuotaDate) </text>),
                                                                        webGrid.Column("Saldo",format:@<text>@String.Format(System.Globalization.CultureInfo.InvariantCulture, "{0:0,0.00}", item.CapitalBalance)</text>),
                                                                        webGrid.Column("Capital", format: @<text>@String.Format(System.Globalization.CultureInfo.InvariantCulture, "{0:0,0.00}", item.Capital)</text>),
                                                                        webGrid.Column("Interés", format: @<text>@String.Format(System.Globalization.CultureInfo.InvariantCulture, "{0:0,0.00}", item.Rate)</text>),
                                                                        webGrid.Column("Comisión", format: @<text>@String.Format(System.Globalization.CultureInfo.InvariantCulture, "{0:0,0.00}", item.Commision)</text>),
                                                                        webGrid.Column("Gastos", format: @<text>@String.Format(System.Globalization.CultureInfo.InvariantCulture, "{0:0,0.00}", item.Expense)</text>),
                                                                        webGrid.Column("Total", format: @<text>@String.Format(System.Globalization.CultureInfo.InvariantCulture, "{0:0,0.00}", item.TotalPayment)</text>)
                                                                                                                                                                                   ))

                            </div>
                        </div>
                    </div>
                </div>               
            </div><!--row-->
        </div>
    </div>
</div><!--row-->
