@model  IEnumerable<KSI.Cobranza.Web.Models.ViewModels.codeudor>
@{
    var webGrid = new WebGrid(source: Model, ajaxUpdateContainerId: "dvCodeudor", canPage: true, rowsPerPage: 10);
}
<div class="row  row-eq">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="panel panel-info col-eq">
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-2 col-md-6 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="CompanyID">No. Cuenta:</label>
                            <input class="form-control" id="disabledInput" type="text" placeholder="Data" disabled="" value="@ViewBag.AccountNumber">
                        </div>
                    </div>

                    <div class="col-lg-2 col-md-6 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="CompanyID">Id:</label>
                            <input class="form-control" id="disabledInput" type="text" placeholder="Data" disabled="" value="@ViewBag.Id">
                        </div>
                    </div>

                    <div class="col-lg-2 col-md-6 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="CompanyID">Estado:</label>
                            <input class="form-control" id="disabledInput" type="text" placeholder="Data" disabled="" value="@ViewBag.Status">
                        </div>
                    </div>

                    <div class="col-lg-2 col-md-6 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="CompanyID">Nombre Cuenta:</label>
                            <input class="form-control" id="disabledInput" type="text" placeholder="Data" disabled="" value="@ViewBag.AccountName">
                        </div>
                    </div>

                    <div class="col-lg-2 col-md-6 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="CompanyID">Cliente:</label>
                            <input class="form-control" id="disabledInput" type="text" placeholder="Data" disabled="" value="@ViewBag.Customer">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="table-responsive">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div id="dvCodeudor">
                                @webGrid.GetHtml(tableStyle: "table table-striped car PhoneMail",
                                                headerStyle: "header-table",
                                                mode: WebGridPagerModes.All,
                                                htmlAttributes: new { @id = "gvCodeudor" },
                                                columns: webGrid.Columns(
                                                                                         webGrid.Column("codebtorClientId", "Código"),
                                                                                         webGrid.Column("codebtorFullname", "Nombre"),
                                                                                         webGrid.Column("codebtorIdentificationNumber", "Identificación"),
                                                                                         webGrid.Column(null, null, format: @<text><input id="key" type="button" class="btn btn-outline-dark" value="Ver" onclick="GetCodeudorPersonalInformation(@item.codebtorClientId)") /></text>, style: "text-center")
)
)
                            </div>
                        </div>
                    </div>
                </div><!--row-->
            </div>
        </div>
    </div>
</div><!--row-->
