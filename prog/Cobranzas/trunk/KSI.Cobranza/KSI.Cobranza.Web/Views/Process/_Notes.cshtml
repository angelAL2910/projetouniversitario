@model KSI.Cobranza.Web.Models.ViewModels.NotesViewModels
<div class="row  row-eq mb20">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 row-eq">
        <div class="panel panel-info col-eq">
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-2 col-md-3 col-sm-12 col-xs-12">
                        <button id="btnNuevo" class="btn btn-primary-st btn-block" onclick="ShowPopMakeNote(@Model.CustomerId,'@Model.CustomerName','@Model.LoanNumber',@Model.accountId)">
                            <i class="fa fa-file-text-o" aria-hidden="true"></i>
                            Nota
                        </button>
                    </div>
                                                                                                       
                    <div class="col-lg-2 col-md-3 col-sm-12 col-xs-12">
                        <button class="btn btn-success btn-block" id="btnRefresh" onclick="RefreshGridCases(@Model.accountId, @Model.CustomerId, '@Model.CustomerName','@Model.LoanNumber',@Model.accountId)">
                            <i class="fa fa-refresh" aria-hidden="true"></i>
                            Refrescar
                        </button>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-12 col-xs-12">
                       @Html.ActionLink("Exportar a Excel", "PrintListCases", "Process", new { ExportType = "Excel", relatedContactId = Model.CustomerId, accountId = Model.accountId, CustomerName = Model.CustomerName, LoanNumber = Model.LoanNumber }, new { @class = "btn btn-success" })
                    </div>
                </div>
                <br />

                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                <div class="form-goup">
                                    <label>Número de caso</label>
                                    <input type="text" id="txtCaseNumber" class="form-control">
                                </div>
                            </div>

                            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                <button class="btn btn-success btn-block mt24" id="btnBuscar" style="width: 71px;" onclick="RefreshGridCases(@Model.accountId, @Model.CustomerId, '@Model.CustomerName','@Model.LoanNumber',@Model.accountId)">
                                    <i class="fa fa-search" aria-hidden="true"></i>
                                    Buscar
                                </button>
                            </div>
                        </div>
                    </div>
                    <br>
                </div>
                <div class="row mt20" id="dvGridCases">
                    @Html.Partial("_GridCases", Model.Cases)
                </div><!--row-->
            </div>
        </div>
    </div>
</div><!--row-->

<div class="row row-eq" id="dvCasesDetail">
    @Html.Partial("_CasesDetail", Model.CasesDetailViewModels)
</div>