
<div class="row  row-eq">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 row-eq">
        <div class="panel panel-info col-eq">
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-3 col-md-6 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="BusinessLine">Proyección por:</label>
                            <select class="form-control" id="ProjectedFilterBy">
                                <option value="">Seleccione un...</option>
                                <option value="1">Pago cuotas</option>
                                <option value="3">Pago Total</option>
                                <option value="4">Pago Parcial Disminución de cuotas</option>
                                <option value="5">Pago Parcial Disminución de plazo</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="CommissionTableName">Saldo al Día:</label>
                            <div class="form-group input-group buscar">
                                <input type="text" class="form-control datepicker" id="FilterDateProjected" value="@ViewBag.FilterDayDefault">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">
                                        <i class="fa fa-calendar"></i>
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-12 col-xs-12">
                        <div class="row">
                            <div class="col-lg-9">
                                <div class="form-group">
                                    <label for="CompanyID">Monto a Pagar:</label>
                                    <input class="form-control" id="ProjectedAmountToPay" type="number" disabled="">
                                </div>
                            </div>
                            <div class="col-lg-3 pdl-0">
                                <button class="btn btn-info mt24" id="ProjectedApplyFilters">Aplicar Filtros</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-3 col-md-6 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="CompanyID">No. Cuenta:</label>
                            <input class="form-control" id="disabledInput" type="text" disabled="" value="@ViewBag.AccountNumber">
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="CompanyID">Id:</label>
                            <input class="form-control" id="disabledInput" type="text" placeholder="Data" disabled="" value="@ViewBag.LoanNumber">
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="CompanyID">Nombre Cuenta:</label>
                            <input class="form-control" id="disabledInput" type="text" placeholder="Data" disabled="" value="@ViewBag.AccountName">
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="CompanyID">Saldo Actual:</label>
                            <input class="form-control" id="OutStandingBalance" type="text" disabled="" value="@ViewBag.OutStandingBalance">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="table-responsive">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="dvGridProjectedStatement">

                        </div>
                    </div>
                </div><!--row-->
            </div>
        </div>
    </div><!--row-->
</div>