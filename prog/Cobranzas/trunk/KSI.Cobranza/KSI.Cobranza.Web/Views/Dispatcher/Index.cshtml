@model KSI.Cobranza.LogicLayer.ResultLogic<KSI.Cobranza.EntityLayer.Movement>

<script>
    $(document).ready(Dispatcher.LoadMovementsExecutionGrid($("#Dispatcher_Launcher_Hdd_QueueId").val()))
</script>

<div class="panel-group" id="accordion5" role="tablist" aria-multiselectable="true">

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="form-group">
                <label for="BusinessLine">Movimientos:</label>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                        <div class="input-group">
                            <select class="form-control" id="Dispatcher_Ddl_IdMovement">
                                @foreach (var Movement in Model.dataResult)
                                {
                                    <option value="@Movement.IdMovement">@Movement.Name</option>
                                }
                            </select>
                            <span class="input-group-btn">
                                <button class="btn btn-info" type="button" data-toggle="modal" data-target="#myModal5" onclick="Dispatcher.LoadMovement($('#Dispatcher_Launcher_Hdd_QueueId').val(), $('#Dispatcher_Ddl_IdMovement').val());">
                                    <i class="fa fa-arrow-circle-right" aria-hidden="true"></i>
                                    Ejecutar
                                </button>
                            </span>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="table-responsive" id="MovementsExecutionGridContainer">
                <!-- C O N T E N E D O R  D E  G R I D   D E  E J E C U C I Ó N  D E  M O V I M I E N T O S -->
            </div>
        </div>
    </div>
</div>
