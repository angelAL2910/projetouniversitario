@model  KSI.Cobranza.Web.Models.ViewModels.GuaranteeViewModels
@{
    var webGrid = new WebGrid(source: Model.GuaranteeList, ajaxUpdateContainerId: "dvGridGuaranteeVehicles");
}
<div class="row  row-eq">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mb20">
        <div class="panel panel-info col-eq">
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="table-responsive">
                            <div id="dvGridGuaranteeVehicles">
                                @webGrid.GetHtml(tableStyle: "table table-striped car PhoneMail",
                                                headerStyle: "header-table",
                                                mode: WebGridPagerModes.All,
                                                htmlAttributes: new { @id = "gvGuaranteesVehicles" },
                                                columns: webGrid.Columns(
                                                                                webGrid.Column("GuaranteeNumber", "No. Garantía"),
                                                                                webGrid.Column("GuaranteeName", "Nombre"),
                                                                                webGrid.Column("GuaranteeType", "Tipo"),
                                                                                webGrid.Column("Porciento", format: @<text>@String.Format(System.Globalization.CultureInfo.InvariantCulture,"{0:0,0.00}%", item.GuaranteePercentage) </text>),                                                                            
                                                                                webGrid.Column("Monto", format: @<text>@String.Format(System.Globalization.CultureInfo.InvariantCulture,"{0:0,0.00}",item.GuaranteeAmount) </text>),                                                                              
                                                                                webGrid.Column("GuaranteeContract", "No. Contrato"),
                                                                                webGrid.Column("GuaranteeStatus", "Estado"),
                                                                                webGrid.Column(null, null,
                                                                                  format: @<text><input id="key" type="hidden" value="@item.GuaranteeNumber" ) /></text>,
                                                            style: "text-center")
                                                        )
                                                      )
                            </div>
                        </div>
                    </div>
                </div><!--row-->
            </div>
        </div>
    </div>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 row-eq">
        <div class="panel panel-info col-eq">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <i class="fa fa-file-text fa-fw"></i>DETALLE
                </h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="table-responsive" id="dvVehicleDetail">
                            @Html.Partial("_VehicleDetail", Model.vehicleInformationDetail)
                        </div>
                    </div>
                </div><!--row-->
            </div>
        </div>
    </div>
</div><!--row-->
