@model KSI.Cobranza.Web.Models.ViewModels.NotesViewModels
<div class="row  row-eq mb20">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 row-eq">
        <div class="panel panel-info col-eq">
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-2 col-md-3 col-sm-12 col-xs-12">
                        <button id="btnNuevo" class="btn btn-primary-st btn-block" onclick="ShowPopMakeNote(@Model.CustomerId,'@Model.CustomerName','@Model.LoanNumber',@Model.accountId)">
                            <i class="fa fa-file-text-o" aria-hidden="true"></i>
                            Nota
                        </button>
                    </div>

                    <div class="col-lg-2 col-md-3 col-sm-12 col-xs-12">
                        <button class="btn btn-success btn-block" id="btnRefresh" onclick="RefreshGridCases(@Model.accountId, @Model.CustomerId, '@Model.CustomerName','@Model.LoanNumber',@Model.accountId)">
                            <i class="fa fa-refresh" aria-hidden="true"></i>
                            Refrescar
                        </button>
                    </div>                   
                </div>
                <br />

                <div class="row">
                    <div class="col-lg-5 col-md-6 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <select class="form-control">
                                <option value="">Seleccione un...</option>
                                <option value="1">EXCEL</option>
                                <option value="2">CSV</option>
                                <option value="3">PDF</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-lg-2 col-md-3 col-sm-12 col-xs-12">
                        <button class="btn btn-info btn-block">
                            <i class="fa fa-share-square-o" aria-hidden="true"></i>
                            Exportar
                        </button>
                    </div>
                </div><!--row-->

                <div class="row" id="dvGridCases">
                     @Html.Partial("_GridCases", Model.Cases)
                </div><!--row-->
            </div>
        </div>
    </div>
</div><!--row-->

<div class="row row-eq" id="dvCasesDetail">    
  @Html.Partial("_CasesDetail", Model.CasesDetailViewModels)    
</div>