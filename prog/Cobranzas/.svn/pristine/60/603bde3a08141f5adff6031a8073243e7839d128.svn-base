@model KSI.Cobranza.EntityLayer.Document

<div id="DocumentValidationForm" class="panel panel-default">

    <div class="panel-heading">

        <div class="row">

            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                <div class="form-group">
                    <label>Documento válido?</label>
                    <br>
                    <input type="radio" id="Document_Form_RadDocumentIsValid" name="RadValidateDocument" @(Model.IsValid ? "checked='checked'": string.Empty) @*onchange="RadDocumentIsValid_OnChange(true)"*@> <label for="Document_Form_RadDocumentIsValid">Si</label>
                    <input type="radio" id="Document_Form_RadDocumentIsNotValid" name="RadValidateDocument" @(Model.IsValid ? string.Empty : "checked='checked'") @*onchange="Document_Form_RadDocumentIsValid_OnChange(false)"*@> <label for="Document_Form_RadDocumentIsNotValid">No</label>
                </div>
            </div>

            <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
                <label for="ShortAnswers" form="Document_Form_DdlShortAnswers">Razón:</label>
                <select class="form-control" id="Document_Form_DdlShortAnswers" name="ShortAnswers">
                    <option value="" @(Model.IdShortAnswer == null ? "selected='selected'": string.Empty)>Seleccione</option>
                    <option value="1" @(Model.IdShortAnswer == 1 ? "selected='selected'": string.Empty)>Incorrecto</option>
                    <option value="2" @(Model.IdShortAnswer == 2 ? "selected='selected'": string.Empty)>No Legible</option>
                </select>
            </div>

        </div>

        <div class="row">

            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">

                <div class="form-group">
                    <label for="Document_Form_TxtComment"><span id="UserWhoComments"></span>:</label>
                    <div>
                        <textarea class="form-control" rows="2" id="Document_Form_TxtComment" readonly="readonly">@Model.Comment</textarea>
                    </div>
                </div>

            </div>

            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">

                <div class="form-group">
                    <label for="Document_Form_TxtObservation">Observación:</label>
                    <div>
                        <textarea class="form-control" rows="2" id="Document_Form_TxtObservation">@Model.Observation</textarea>
                    </div>
                </div>

            </div>

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <button type="button" class="btn btn-primary-st" onclick="SaveDocumentValidationInformation();">
                    Validar documento
                </button>
            </div>

        </div>

    </div>

</div>

<!--
Hiddens
-->
<input type="hidden" id="Document_Form_IdRequirement" value="@Model.IdRequirement"/>
