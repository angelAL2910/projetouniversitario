@model IEnumerable<KSI.Cobranza.Web.Models.ViewModels.Cases>
@{
    var webGridCases = new WebGrid(source: Model, ajaxUpdateContainerId: "dvGridCases", canPage: false);
}
<div class="table-responsive">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div id="dvGridCases">
            @webGridCases.GetHtml(tableStyle: "table table-striped car PhoneMail",
                                             headerStyle: "header-table",
                                             htmlAttributes: new { @id = "gvCases" },
                                                                        columns: webGridCases.Columns(
                                                                                       webGridCases.Column(null,format: @<text><input id="Key" data="@item.CaseNumber" type="checkbox" /></text>,style: "text-center"),
                                                                                       webGridCases.Column("CaseNumber", "Numero de Caso"),
                                                                                       webGridCases.Column("CaseDate", "Fecha"),
                                                                                       webGridCases.Column("OpeningCase", "Apertura Caso"),
                                                                                       webGridCases.Column("ClosingCase", "Cierre Caso"),
                                                                                       webGridCases.Column("CaseType", "Tipo"),
                                                                                       webGridCases.Column("CategoryCase", "Categoria"),
                                                                                       webGridCases.Column("AboutCase", "Respecto A"),
                                                                                       webGridCases.Column("User", "Usuario"),
                                                                                       webGridCases.Column("Recording", "Grabación"),
                                                                                       webGridCases.Column("NoteNumber", "# Nota"),
                                                                                       webGridCases.Column("Priority", "Prioridad"),
                                                                                       webGridCases.Column(null,format: @<text><input id="Key" value="@item.CaseKey" type="hidden" /></text>,
                                                                                                                                      style: "text-center")

                                       )
                                       )

        </div>
    </div>
</div>
