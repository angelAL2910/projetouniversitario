@model IEnumerable<KSI.Cobranza.Web.Models.ViewModels.QueueViewModels>

@{
    var webGrid = new WebGrid(source: Model, ajaxUpdateContainerId: "dvGrid", ajaxUpdateCallback: "Init()");
}

<div id="dvGrid">
    @webGrid.GetHtml(tableStyle: "table table-striped qcobranzas",
                     headerStyle: "header-table",
                     mode: WebGridPagerModes.All,
                     htmlAttributes: new { @id = "gvLoansQueue" },
                                    columns: webGrid.Columns(
                                                              webGrid.Column("Id", "Id"),
                                                              webGrid.Column("CustomerFullName", "Nombre del Cliente"),
                                                              webGrid.Column("AmountFinanced", "Monto financiado"),
                                                              webGrid.Column("InterestRate", "Tasa Interés"),
                                                              webGrid.Column("ExecutiveName", "Ejecutivo"),
                                                              webGrid.Column("SponsorName", "Promotor"),

                                                              webGrid.Column("Term", "Plazo"),
                                                              webGrid.Column("CreditState", "Estado"),
                                                              webGrid.Column("Office", "Oficina"),
                                                              webGrid.Column("Product", "Producto"),
                                                              webGrid.Column("QueuePosition", "QUEUE"),
                                                              webGrid.Column("ActionDate", "Fecha de acción"),
                                                              webGrid.Column("ReferrerDepartment", "Departamento"),
                                                              webGrid.Column("AssignTo", "Asignado"),
                                                              webGrid.Column("KindOfFollowup", "Tipo de Seguimiento"),
                                                              webGrid.Column("AmountOwed", "Monto adeudado"),


                                                              webGrid.Column(null, null,
                                                              format: @<text><input id="key" type="hidden" value="@item._dataRequest" ) /></text>,
                                                                                  style: "text-center")
                                                             )
                                                           )
</div>


