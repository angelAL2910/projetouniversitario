@*@model IEnumerable<StateTrustGlobal.ViewModels.Marcas>*@
@model IPagedList<StateTrustGlobal.ViewModels.ALL_LOCATION>
@using StateTrustGlobal.Helpers
@using PagedList;
@using PagedList.Mvc;
<br />

<h2>Marcas Registradas</h2>

<br />
@* ###################################################### *@
@* ######### VISTA PARCIAL DE LAS ALERTAS################ *@
@* ###################################################### *@
@{ Html.RenderPartial("_Alerts"); }
@* ###################################################### *@
@* ######### VISTA PARCIAL DE LAS ALERTAS################ *@
@* ###################################################### *@

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery-ui-1.9.2.min.js"></script>
@Styles.Render("~/Content/themes/base/css")
@using (Html.BeginForm("Index", "MarcasModelos", FormMethod.Post))
{
    <p>
        <div class="form-inline">
            <div class="form-group">
                @Html.TextBox("Search", ViewBag.CurrentFilter as string, null, new { @class = "form-control", @placeholder = "Colocar Nombre Marca" })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-search"></span> Buscar
                </button>
            </div>
        </div>
        <br />
        @Html.ActionLink("Nuevo Registro", "CreateProvincias", null, new { @class = "btn btn-info" })
        @Html.ActionLink("Mostrar Todo", "Indexs", new { }, new { @class = "btn btn-success" })
    </p>
}
<span id="rData"></span>
<div id="page-wrapper">

    <!-- /.row -->
    <div class="row">
        <div class="col-md-6" style="align-content:center">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Datos Registrados
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">

                            <thead>
                                <tr>

                                    <th>
                                        @Html.DisplayNameFor(model => model.First().City_Desc)

                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.First().Global_Country_Desc)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.First().State_Prov_Desc)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.First().Estatus)
                                    </th>
                                    <th>Opciones</th>
                                </tr>
                            </thead>

                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.City_Desc)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Global_Country_Desc)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.State_Prov_Desc)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Estatus)
                                    </td>
                                    <td>
                                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'> Provincias</span>", "Editar", "Index", "Ciudades",
                                     routeValues: new { id = item.Country_Id }, htmlAttributes: new { data_modal = "", @class = "btn btn-warning" })
                                        &nbsp;
                                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus-sign'></span>", "Crear Modelo", "ModelCreate", "MarcasModelos",
                                     routeValues: new { id = item.Country_Id }, htmlAttributes: new { data_modal = "", @class = "lnkDetail btn btn-success" })
                                    </td>

                                </tr>
                            }
                        </table>
                        <div class="page-count" style="display:inline-block; vertical-align:middle;">
                            Pág. @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount
                        </div>
                        <div class="pagination" style="display:inline-block; vertical-align:middle;">
                            @Html.PagedListPager(Model, pageNumber => Url.Action("Indexs", new { pageNumber }))
                        </div>
                        <!-- /.table-responsive -->

                    </div>

                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->

            </div>
            <!-- /.col-lg-12 -->
        </div>

    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    
}