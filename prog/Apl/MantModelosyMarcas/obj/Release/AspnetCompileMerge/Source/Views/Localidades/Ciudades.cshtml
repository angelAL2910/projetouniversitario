@* ###################################################### *@
@* ######### VISTA PARCIAL DE LAS ALERTAS################ *@
@* ###################################################### *@
@{ Html.RenderPartial("_Alerts"); }
@* ###################################################### *@
@* ######### VISTA PARCIAL DE LAS ALERTAS################ *@
