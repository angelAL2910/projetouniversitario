                <!-- Agregando opciones al menu de Perfil -->
                <!-- Agregando opciones al menu de Perfil -->
            </div>

            <div class="st-pusher">
                <div class="st-content">
                    <!--boton abre y cierra el canvas-->
                    <div id="st-trigger-effects">
                        <button data-effect="st-effect-2" id="btnLoadProfile" class="show_profile" onclick="GetUserProfileDataMVC(true);"> </button>
                    </div>
                    <div id="scroll_2">
                        <div class="main clearfix">
                            <div class="contenido_derecha">
                                <!--wrapper de las columnas-->
                                <div class="grid grid-pad">
                                    <div id="divBody" class="">

                                        <div class="main_menu clearfix">

                                            <div id="menu" class="nav back">
                                                <ul>
                                                    <li style="width:30%;"><span class="logos"></span> </li>

                                                    <li><a href="/MarcasModelos/Index" class="active" id="opc1"><span class="icon dashboard"></span><span>Marcas y Modelos</span></a></li>
                                                    <li><a href="/TasaIntermediario/Index" class="" id="opc2"><span class="icon dashboard"></span><span>Tasa Intermediario </span></a></li>
