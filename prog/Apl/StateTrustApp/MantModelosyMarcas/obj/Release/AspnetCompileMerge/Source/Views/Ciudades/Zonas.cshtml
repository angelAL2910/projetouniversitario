@model StateTrustGlobal.ViewModels.Paises_VM
@{
    ViewBag.Title = "CreateModel";
    Layout = null;
}

<h2>Crear Zona</h2>
@* ###################################################### *@
@* ######### VISTA PARCIAL DE LAS ALERTAS################ *@
@* ###################################################### *@
@{ Html.RenderPartial("_Alerts"); }
@* ###################################################### *@
@* ######### VISTA PARCIAL DE LAS ALERTAS################ *@
@* ###################################################### *@
@using (Html.BeginForm("Zonas", "Ciudades", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.Hidden("Nombre_Pais")
 
       <div class="form-group">
            @Html.Label("", "Paises", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Paises", null, "<--Seleccione Pais-->", htmlAttributes: new { @class = "form-control col-md-4", @required = "required" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Zona", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("Nombre_Zona", null, null, new { @class = "form-control col-md-4", @placeholder = "Colocar Nombre Zona", @required = "required" })
            </div>
        </div>
      

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-success" />
                @Html.ActionLink("Volver Atras", "AllMantenimientos", null, new { @class = "btn btn-info" })
            </div>

        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $("#Paises").change(function () {
            $("#Nombre_Pais").val(($('option:selected', $(this)).text()));
        });
    </script>
}
