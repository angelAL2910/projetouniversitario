@model StateTrustGlobal.ViewModels.MovimientoCartera
@using StateTrustGlobal.Helpers
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("OtrosDatos", "MovimientoCarteras", FormMethod.Post))
{
    @Html.AntiForgeryToken()

