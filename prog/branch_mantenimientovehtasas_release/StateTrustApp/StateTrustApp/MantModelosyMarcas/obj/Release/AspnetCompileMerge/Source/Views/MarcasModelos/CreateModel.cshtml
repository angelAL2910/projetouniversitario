@using (Html.BeginForm("CreateModel", "MarcasModelos", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-sm-2">Marca</label>
            <div class="col-md-10">
                @Html.TextBox("Marca", Session["NoMarca"], null, new
                   {
                       @class = "form-control col-sm-2 input-validation-error form-control",
                       style = "width:100px",
                       @disabled = "disabled",
                       required = "required"
                   })
                @Html.TextBox("NombreMarca", Session["Marca"], null, new
                   {
                       @class = "form-control col-sm-6",
                       style = "width:500px",
                       @disabled = "disabled"
                   })

            </div>
        </div>

        <div class="form-inline">
            <div class="form-group">
                @Html.LabelFor(model => model.NombreModelo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBox("NombreModelo", ViewBag.CurrentFilter as string, null, new { @class = "form-control", @placeholder = "Colocar Nombre Modelo", @required = "required" })
                    @Html.ValidationMessageFor(model => model.NombreModelo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
            <div class="form-group">

            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Vehicle_Type_Id, "Tipo Vehículo", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("TipoVehiculos", null, "<---Seleccione Tipo Vehículo--->", htmlAttributes: new { @class = "form-control", @required = "required" })
                    @Html.ValidationMessageFor(model => model.Vehicle_Type_Id, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                @Html.Label("Capacidad Vehiculo", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("Capacidad", Enumerable.Empty<SelectListItem>(),"", new { @class = "form-control" })
                    @*@Html.ValidationMessageFor(model => model.tRoles.RolesID, "", new { @class = "text-danger" })*@
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Version Vehiculo", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("VersionVeh", null, "<---Seleccione Version Vehiculo--->", htmlAttributes: new { @class = "form-control", @required = "required" })
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Descripcion, "Tipo Recargo", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("CategoriaVehiculos", null, "<---Seleccione Tipo Recargo--->", htmlAttributes: new { @class = "form-control", @required = "required" })
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                </div>
            </div>
        <div id="wait" style="display:none;width:69px;height:89px;position:absolute;top:50%;left:50%;padding:2px;"><img src='~/images/loading5.gif' width="64" height="64" /></div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                    @*@Html.ActionLink("Volver Atras", "ModelCreate", null, new { @class = "btn btn-info" })*@
                </div>

            </div>
        </div>
}
 
    <script>
                    $(document).ready(function () {
                        //Dropdownlist Selectedchange event
                        $("#TipoVehiculos").change(function () {
                            $("#Capacidad").empty();
                            $.ajax({
                                type: 'POST',
                                url: '@Url.Action("Mostrar_Capacidad_TipoVehiculo", "MarcasModelos")',
                                dataType: 'json',
                                data: { IDTipoVehiculos: $("#TipoVehiculos").val() },
                                success: function (Datos) {
                                    $.each(Datos, function (i, Datos) {
                                        
                                        $("#Capacidad").append('<option value="'
                                            + Datos.IdTipoVehiculo + '">'
                                            + Datos.DescCapacidad + '</option>');
                                    });
                                },
                                error: function (ex) {
                                    //alert('Failed to retrieve states.' + ex.responseText);
                                }
                            });
                            return false;
                        })
                    });
    </script>
 
<script>
    $(document).ready(function () {
        $(document).ajaxStart(function () {
            $("#wait").css("display", "block");
        });
        $(document).ajaxComplete(function () {
            $("#wait").css("display", "none");
        });
        $("button").click(function () {
            $("#txt").load("demo_ajax_load.asp");
        });
    });
</script>
