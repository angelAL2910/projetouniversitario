@model StateTrustGlobal.ViewModels.MovimientoCartera
@using StateTrustGlobal.Helpers
@{
    ViewBag.Title = "MoveAgentesCartera";
}

<h2>MoveAgentesCartera</h2>
@* ###################################################### *@
@* ######### VISTA PARCIAL DE LAS ALERTAS################ *@
@* ###################################################### *@
@{ Html.RenderPartial("_Alerts"); }
@* ###################################################### *@
@* ######### VISTA PARCIAL DE LAS ALERTAS################ *@
