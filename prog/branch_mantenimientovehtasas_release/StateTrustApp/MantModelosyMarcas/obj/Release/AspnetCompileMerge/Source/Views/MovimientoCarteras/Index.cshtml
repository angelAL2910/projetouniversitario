    @using (Html.BeginForm("Index", "MovimientoCarteras", FormMethod.Post))
{
    <div class="form-horizontal">
   
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-md-12">
            <!-- Adjust this to be sm/md/lg, whatever fits best for you-->
            <div class="form-group">
                @Html.LabelFor(model => model.DateOut, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DateOut, new { htmlAttributes = new { @class = "form-control", id = "datepicker", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.DateOut, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.DateIn, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DateIn, new { htmlAttributes = new { @class = "form-control", id = "datepicker1", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.DateIn, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Note, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Note, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.New_Supervisor_Agent_Id, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("New_Supervisor_Agent_Id", null,"", htmlAttributes: new { @class = "form-control", @required = "required" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Agentes", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select class="form-control select2" multiple="multiple" data-placeholder="Seleccione Agente" style="width: 100%; " name="Agentes" >
                        @foreach (var item in ViewBag.Agentes)
                        {
                            
                            <option value="@item.Agent_id" data-descripcion="Agent_id_@item.Agent_id" data-descr="Agent_id_@item.Agent_Code"> @item.Name </option>
                        }
                    </select>
                </div>
            </div>
        </div>
     
        <input type="submit" value="Guardar" class="btn btn-success" />
    </div>
}

