@model StateTrustGlobal.ViewModels.Paises_VM
@{
    ViewBag.Title = "CreateModel";
    Layout = null;

}
<h2>Crear Municipios</h2>
@* ###################################################### *@
@* ######### VISTA PARCIAL DE LAS ALERTAS################ *@
@* ###################################################### *@
@{ Html.RenderPartial("_Alerts"); }
@* ###################################################### *@
@* ######### VISTA PARCIAL DE LAS ALERTAS################ *@
@* ###################################################### *@

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@using (Html.BeginForm("CreateMunicipios", "Localidades", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.Hidden("Nombre_Pais")
        @Html.Hidden("Nombre_Prov")


        <div class="form-group">
            @Html.Label(" ", "Paises", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.DropDownList("Paises", null, "<--Seleccione Pais-->", htmlAttributes: new { @class = "form-control", @required = "required" })

        </div>
        <div class="form-group">
            @Html.Label("", "Provincia", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.DropDownList("Provincias", null, "", htmlAttributes: new { @class = "form-control", @required = "required" })
        </div>
        <div class="form-group">
            @Html.Label("", "Zonas", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.DropDownList("Zonas", null, "<--Seleccione Zona-->", htmlAttributes: new { @class = "form-control", @required = "required" })
        </div>
        <div class="form-group">
            @Html.Label("Municipio ", htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        @Html.TextBox("Nombre_Municipio", null, null, new { style = "align=left; width:348px", @placeholder = "Colocar Nombre Municipio", @required = "required" })
        <br /><br /><br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-success" />
                @Html.ActionLink("Volver Atras", "Provincies", null, new { @class = "btn btn-info" })
            </div>

        </div>
    </div>
}

<script>
    $(document).ready(function () {
        //Dropdownlist Selectedchange event
        $("#Paises").change(function () {
            $("#Provincias").empty();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("Llenar_Provincias_x_Ciudades", "Ciudades")',
                dataType: 'json',
                data: { Global_Country_Id: $("#Paises").val() },
                success: function (Datos) {
                    $.each(Datos, function (i, Datos) {
                        $("#Provincias").append('<option  value="'
                            + Datos.State_Prov_Id + '">'
                            + Datos.State_Prov_Desc +
                            '</option>');
                    });
                },
                error: function (ex) {
                    alert('Failed to retrieve states.' + ex.responseText);
                }
            });
            return false;
        })
    });
</script>
<script type="text/javascript">
    $("#Paises").change(function () {
        $("#Nombre_Pais").val(($('option:selected', $(this)).text()));
    });
</script>
<script type="text/javascript">
    $("#Provincias").change(function () {
        $("#Nombre_Prov").val(($('option:selected', $(this)).text()));
    });
</script>
