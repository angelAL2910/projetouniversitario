@model IEnumerable<StateTrustGlobal.ViewModels.Marcas>
@using StateTrustGlobal.Helpers
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "BuscarMarca";
}

<h2>BuscarMarca</h2>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Marcas Registradas
                </div>
                <!-- /.panel-heading -->
                <div>
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Make_Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Make_Desc)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Make_Status)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Pos_Flag)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Make_Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Make_Desc)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Make_Status)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Pos_Flag)
                                    </td>
                                    <td>
                                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Edit", "Edit", "MarcasModelos",
                                        routeValues: new { id = item.Make_Id }, htmlAttributes: new { data_modal = "", @class = "btn btn-warning" })
                                        &nbsp;
                                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-search'></span>", "Details", "Details", "MarcasModelos",
                                        routeValues: new { id = item.Make_Id }, htmlAttributes: new { data_modal = "", @class = "lnkDetail btn btn-info" })
                                        &nbsp;
                                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Delete", "Delete", "MarcasModelos",
                                        routeValues: new { id = item.Make_Id }, htmlAttributes: new { data_modal = "", @class = "lnkDelete btn btn-danger" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- /.table-responsive -->

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>