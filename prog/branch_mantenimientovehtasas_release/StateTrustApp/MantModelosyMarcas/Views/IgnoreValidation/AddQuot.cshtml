@using StateTrustGlobal.ViewModels
@model IgnoreValidacion
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "AddQuot";
}

<h2>Desactivar Validación Rnc/Cedula a Cotizacion</h2>

@using (Html.BeginForm("AddQuot", "IgnoreValidation", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("Id", Model != null ? Model.Id : 0)

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="form-group">
                <label class="control-label col-sm-2">Numero Cotizacion</label>
                <div class="col-md-10">
                    @Html.TextBox("QuotationNumber", Model != null ? Model.QuotationNumber : "", null, new
                   {
                       @class = "form-control col-sm-2 input-validation-error form-control",
                       required = "required"
                   })
                    @Html.ValidationMessageFor(model => model.QuotationNumber, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <label class="control-label col-sm-2">Activar o Desactivar Validación</label>
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.RadioButton("Ignore_Status", "A", Model != null ? Model.Status == true ? true : false : false, new {@class= "disableornot"})  Desactivar Validación
                        &nbsp; &nbsp; &nbsp;
                        @Html.RadioButton("Ignore_Status", "I", Model != null ? Model.Status == false ? true : false : false, new { @class = "disableornot" }) Activar Validación
                    </div>
                </div>
            </div>
        </div>


        <div id="wait" style="display:none;width:69px;height:89px;position:absolute;top:50%;left:50%;padding:2px;"><img src='~/images/loading5.gif' width="64" height="64" /></div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-success btnSave" />
                @Html.ActionLink("Volver Atras", "Index", null, new { @class = "btn btn-info" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {

            $('.btnSave').on('click', function () {
                var QuotationNumber = $("#QuotationNumber").val();
                                
                if (QuotationNumber === '') {
                    alert("El Numero de Cotizacion es Requerido");
                    return false;
                }               

            });

        });
    </script>
}