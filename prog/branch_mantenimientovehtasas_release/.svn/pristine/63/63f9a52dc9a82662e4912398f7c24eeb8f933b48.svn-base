@model StateTrustGlobal.ViewModels.ModelosViews
 
@{
    ViewBag.Title = "CreateModel";
   
}

<h2>Introducir Modelo</h2>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@* ###################################################### *@
@* ######### VISTA PARCIAL DE LAS ALERTAS################ *@
@* ###################################################### *@
@{ Html.RenderPartial("_Alerts"); }
@* ###################################################### *@
@* ######### VISTA PARCIAL DE LAS ALERTAS################ *@
@* ###################################################### *@
@using (Html.BeginForm("CreateModel", "MarcasModelos", FormMethod.Post))
{
    @Html.AntiForgeryToken()
           @Html.Hidden("NombreCapacidad")
    <div class="form-horizontal">

    
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-sm-2">Marca</label>
            <div class="col-md-10">
                @Html.TextBox("Marca", Session["NoMarca"], null, new
                   {
                       @class = "form-control col-sm-2 input-validation-error form-control",
                       style = "width:100px",
                       @disabled = "disabled",
                       required = "required"
                   })
                @Html.TextBox("NombreMarca", Session["Marca"], null, new
                   {
                       @class = "form-control col-sm-6",
                       style = "width:500px",
                       @disabled = "disabled"
                   })

            </div>
        </div>

  
            <div class="form-group">
                @Html.LabelFor(model => model.Modelos.NombreModelo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBox("NombreModelo", ViewBag.CurrentFilter as string, null, new { @class = "form-control", @placeholder = "Colocar Nombre Modelo", @required = "required" })
                    @Html.ValidationMessageFor(model => model.Modelos.NombreModelo, "", new { @class = "text-danger" })
                </div>
            </div>
     
        @* TIPO DE VEHICULO *@
        <div class="left">
            <div class="col-md-2">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        Tipo Vehiculos
                    </div>
                    <div id="" style="overflow: scroll; overflow-x: hidden; height: 300px; width: 250px">
                        <div class="panel-body">
                            <div class=" table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="cbkTipoVehtbl">
                                    <thead>
                                        <tr>

                                            <th class=" col-check">
                                                <input type="checkbox" id="cbkTipoVeh" onclick="test()" />
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.TipoVehiculos[0].DescIdioma)
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.TipoVehiculos.Count; i++)
                                        {
                                            <tr>
                                                <td>
                                                    <input type="checkbox" id="cbkTipoVehiculo_@Html.DisplayFor(modelItem => Model.TipoVehiculos[i].IdListaHeader)"
                                                           name="cbkTipoVehiculo_@Html.DisplayFor(modelItem => Model.TipoVehiculos[i].IdListaHeader)"
                                                           data-descripcion="@Html.DisplayFor(modelItem => Model.TipoVehiculos[i].IdListaHeader)" class="use-address" />
                                                <td>
                                                    @Html.DisplayFor(modelItem => Model.TipoVehiculos[i].DescIdioma)
                                                </td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>

                            </div>



                        </div>
                    </div>
                </div>
            </div>
        </div>
        @* CAPACIDAD VEHICULO *@
        <div class="left">
            <div class=" col-md-2">
                <div class="panel panel-success">
                    <div class="panel-heading">
                        Capacidad Vehiculos
                    </div>
                    <div id="" style="overflow: scroll; overflow-x: hidden; height: 300px; width: 250px">
                        <div class="panel-body">
                            <div class=" table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="cbkCapacidadVehiculotbl">
                                    <thead>
                                        <tr>

                                            <th class=" col-check">
                                                <input type="checkbox" id="cbkCapacidadVehiculo" onclick="test()" />
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.CapacidadTipoVehiculo[0].DescCapacidad)
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.CapacidadTipoVehiculo.Count; i++)
                                        {
                                            <tr>
                                                <td>
                                                    <input type="checkbox" id="cbkCapacidadVehiculo_@Html.DisplayFor(modelItem => Model.CapacidadTipoVehiculo[i].IdCapacidad)"
                                                           name="cbkCapacidadVehiculo_@Html.DisplayFor(modelItem => Model.CapacidadTipoVehiculo[i].IdCapacidad)"
                                                           data-descripcion="@Html.DisplayFor(modelItem => Model.CapacidadTipoVehiculo[i].IdCapacidad)" class="use-address" />
                                                <td>
                                                    @Html.DisplayFor(modelItem => Model.CapacidadTipoVehiculo[i].DescCapacidad)
                                                </td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>

                            </div>



                        </div>
                    </div>
                </div>
            </div>

        </div>
        @* VERSION VEHICULOS *@
        <div class="left">
            <div class="col-md-2">
                <div class="panel panel-warning">
                    <div class="panel-heading">
                        Version Vehiculos
                    </div>
                    <div id="" style="overflow: scroll; overflow-x: hidden; height: 300px; width: 250px">
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="cbkVersionVehiculotbl">
                                    <thead>
                                        <tr>

                                            <th class="col-check"><input type="checkbox" id="cbkVersionVehiculos" onclick="test()" /></th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.VersionVehiculos[0].DescIdioma)
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.VersionVehiculos.Count; i++)
                                        {
                                            <tr>
                                                <td>
                                                    <input type="checkbox" id="cbkVersionVehiculo_@Html.DisplayFor(modelItem => Model.VersionVehiculos[i].IdListaHeader)"
                                                           name="cbkVersionVehiculo_@Html.DisplayFor(modelItem => Model.VersionVehiculos[i].IdListaHeader)"
                                                           data-descripcion="@Html.DisplayFor(modelItem => Model.VersionVehiculos[i].IdListaHeader)" class="use-address" />
                                                <td>
                                                    @Html.DisplayFor(modelItem => Model.VersionVehiculos[i].DescIdioma)
                                                </td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        @* CATEGORIA VEHICULOS *@
        <div class="left">
            <div class="col-md-2">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Categoria Vehiculos
                    </div>
                    <div id="" style="overflow: scroll; overflow-x: hidden; height: 300px; width: 250px">
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="cbkCategoriaVehiculotbl">
                                    <thead>
                                        <tr>

                                            <th class="col-check"><input type="checkbox" id="cbkCategoriaVehiculo" onclick="test()" /></th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.CategoriaVehiculos[0].Descripcion)
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.CategoriaVehiculos.Count; i++)
                                        {
                                            <tr>
                                                <td>
                                                    <input type="checkbox" id="cbkCategoriaVehiculo_@Html.DisplayFor(modelItem => Model.CategoriaVehiculos[i].Codigo)"
                                                           name="cbkCategoriaVehiculo_@Html.DisplayFor(modelItem => Model.CategoriaVehiculos[i].Codigo)"
                                                           data-descripcion="@Html.DisplayFor(modelItem => Model.CategoriaVehiculos[i].Codigo)" class="use-address" />
                                                <td>
                                                    @Html.DisplayFor(modelItem => Model.CategoriaVehiculos[i].Descripcion)
                                                </td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="wait" style="display:none;width:69px;height:89px;position:absolute;top:50%;left:50%;padding:2px;"><img src='~/images/loading5.gif' width="64" height="64" /></div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                    @*@Html.ActionLink("Volver Atras", "ModelCreate", null, new { @class = "btn btn-info" })*@
                    @Html.ActionLink("Volver Atras", "ModelCreate", new { id = Session["NoMarca"].ToString() }, new { @class = "btn btn-info" })
                </div>

            </div>
        </div>
}
 
    <script>
                    $(document).ready(function () {
                        //Dropdownlist Selectedchange event
                        $("#TipoVehiculos").change(function () {
                            $("#Capacidad").empty();
                            $.ajax({
                                type: 'POST',
                                url: '@Url.Action("Mostrar_Capacidad_TipoVehiculo", "MarcasModelos")',
                                dataType: 'json',
                                data: { IDTipoVehiculos: $("#TipoVehiculos").val() },
                                success: function (Datos) {
                                    $.each(Datos, function (i, Datos) {
                                        
                                        $("#Capacidad").append('<option value="'
                                            + Datos.IdTipoVehiculo + '">'
                                            + Datos.DescCapacidad + '</option>');
                                    });
                                },
                                error: function (ex) {
                                    //alert('Failed to retrieve states.' + ex.responseText);
                                }
                            });
                            return false;
                        })
                    });
    </script>
 <script type="text/javascript">
     $("#Capacidad").change(function () {
         $("#NombreCapacidad").val(($('option:selected', $(this)).text()));
    });
</script>
<script>
    $(document).ready(function () {
        $(document).ajaxStart(function () {
            $("#wait").css("display", "block");
        });
        $(document).ajaxComplete(function () {
            $("#wait").css("display", "none");
        });
        $("button").click(function () {
            $("#txt").load("demo_ajax_load.asp");
        });
    });
</script>
<script>
    $(document).ready(function () {
        $('.btn-filter').on('click', function () {
            var $target = $(this).data('target');
            if ($target != 'all') {
                $('.table tbody tr').css('display', 'none');
                $('.table tr[data-status="' + $target + '"]').fadeIn('slow');
            } else {
                $('.table tbody tr').css('display', 'none').fadeIn('slow');
            }
        });
        /*TIPO VEHICULO*/
        $('#cbkTipoVeh').on('click', function () {
            if ($("#cbkTipoVehtbl #cbkTipoVeh").is(':checked')) {
                $("#cbkTipoVehtbl input[type=checkbox]").each(function () {
                    $(this).prop("checked", true);
                });

            } else {
                $("#cbkTipoVehtbl input[type=checkbox]").each(function () {
                    $(this).prop("checked", false);
                });
            }
        });
        /*CAPACIDAD VEHICULO*/
        $('#cbkCapacidadVehiculo').on('click', function () {
            if ($("#cbkCapacidadVehiculotbl #cbkCapacidadVehiculo").is(':checked')) {
                $("#cbkCapacidadVehiculotbl input[type=checkbox]").each(function () {
                    $(this).prop("checked", true);
                });

            } else {
                $("#cbkCapacidadVehiculotbl input[type=checkbox]").each(function () {
                    $(this).prop("checked", false);
                });
            }
        });
        /*VERSION VEHICULO*/
        $('#cbkVersionVehiculos').on('click', function () {
            if ($("#cbkVersionVehiculotbl #cbkVersionVehiculos").is(':checked')) {
                $("#cbkVersionVehiculotbl input[type=checkbox]").each(function () {
                    $(this).prop("checked", true);
                });

            } else {
                $("#cbkVersionVehiculotbl input[type=checkbox]").each(function () {
                    $(this).prop("checked", false);
                });
            }
        });
        /*CATEGORIA VEHICULO*/
        $('#cbkCategoriaVehiculo').on('click', function () {
            if ($("#cbkCategoriaVehiculotbl #cbkCategoriaVehiculo").is(':checked')) {
                $("#cbkCategoriaVehiculotbl input[type=checkbox]").each(function () {
                    $(this).prop("checked", true);
                });

            } else {
                $("#cbkCategoriaVehiculotbl input[type=checkbox]").each(function () {
                    $(this).prop("checked", false);
                });
            }
        });
    });
</script>
