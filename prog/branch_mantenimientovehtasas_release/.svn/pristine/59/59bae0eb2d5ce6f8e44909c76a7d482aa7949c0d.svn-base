function TabActivo(tab) {
    if ($("#tabActivo").val() != "") {

        $("#opc1").removeClass("active");
        $("#opc2").removeClass("active");
        $("#opc3").removeClass("active");
        $("#opc4").removeClass("active");
        $("#opc5").removeClass("active");
        $("#opc6").removeClass("active");

        var tabAct = "#" + tab;
        $(tabAct).addClass("active");
    }
}
