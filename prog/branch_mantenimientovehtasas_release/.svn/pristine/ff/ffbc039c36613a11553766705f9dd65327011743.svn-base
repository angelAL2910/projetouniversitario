@using StateTrustGlobal.ViewModels
@using StateTrustGlobal.Helpers
@model dynamic
@using PagedList;
@using PagedList.Mvc;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}

<h2>Desactivar Validación Rnc/Cedula a Cotización</h2>

@* ###################################################### *@
@* ######### VISTA PARCIAL DE LAS ALERTAS################ *@
@* ###################################################### *@
@{ Html.RenderPartial("_Alerts"); }
@* ###################################################### *@
@* ######### VISTA PARCIAL DE LAS ALERTAS################ *@
@* ###################################################### *@

<div class="row">
    <div class="col-md-10">
        <div class="panel panel-default">
            <div class="panel-heading">
                Desactivar Validación Rnc/Cedula a Cotización
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div class="fr text-right">
                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus-sign'>&nbsp;Agregar Nueva</span>", "Agregar Nueva", "AddQuot", "IgnoreValidation",
                                                 htmlAttributes: new { data_modal = "", @class = "btn btn-info" })
                    </div>


                    <table class="table table-striped table-bordered table-hover noValidateTbl" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    Número Cotización
                                </th>
                                <th>
                                    ¿Validación Rnc/Cedula Desactivada?
                                </th>
                                <th>Opciones</th>
                            </tr>
                        </thead>

                        @foreach (IgnoreValidacion item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.QuotationNumber)
                                </td>

                                <td>
                                    @if (item.Status == true)
                                    {
                                        @Html.Raw("Si")
                                    }
                                    else
                                    {
                                        @Html.Raw("No")
                                    }

                                </td>
                                <td>
                                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Editar", "AddQuot", "IgnoreValidation",
                                  routeValues: new { quotNum = item.QuotationNumber }, htmlAttributes: new { data_modal = "", @class = "btn btn-warning", id = "lnkCreate" })
                                </td>

                            </tr>
                        }
                    </table>


                </div>

                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->

        </div>
        <!-- /.col-lg-12 -->
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {
            $('.noValidateTbl').DataTable({
                responsive: true,
                colReorder: true
            });
        });
    </script>
}
