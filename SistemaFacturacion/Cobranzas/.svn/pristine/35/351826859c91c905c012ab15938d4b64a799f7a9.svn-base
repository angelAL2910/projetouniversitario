@model  IEnumerable<KSI.Cobranza.Web.Models.ViewModels.PhoneCallViewModels>
@{
    var webGridPhoneCalls = new WebGrid(source: Model, ajaxUpdateContainerId: "dvPhoneCalls", canPage: true,rowsPerPage:10);
}
<div class="col-lg-12">
    <div class="panel panel-service">
        <div class="panel-heading">
            LLAMADA TELEFÓNICA
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label for="ComponentID">Fecha de Llamada:</label>
                        <div class="form-group input-group buscar">
                            <input type="text" class="form-control datepicker" value="">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button">
                                    <i class="fa fa-calendar"></i>
                                </button>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="table-responsive mb20">
                        <div id="dvPhoneCalls">
                            @webGridPhoneCalls.GetHtml(tableStyle: "table table-striped car PhoneMail",
                                              headerStyle: "header-table",
                                                       htmlAttributes: new { @id = "gvPhoneCalls" },
                                                                             columns: webGridPhoneCalls.Columns(
                                                                             webGridPhoneCalls.Column(null,
                                                                                                   format: @<text>
                                                                                <input type="checkbox" style="margin-top: 21px;" data="@item.KeyCall" />

                                                                                                </text>, style: "text-center"),
                                                                                      webGridPhoneCalls.Column(header: "Reproducción",
                                                                                                   format: @<text>
                                                                                                  <audio style="width: 238px;float: left;" src="@item.RealPathCallToPlay" controls="controls" type="audio/mpeg"></audio>
                                                                                                </text>, style: "text-center"),
                                                                                      webGridPhoneCalls.Column("FullName", "Usuario"),
                                                                                      webGridPhoneCalls.Column("CreateDate", "Fecha")
                                                                                                        )
                                                                                       )


                        </div>
                    </div>
                </div>
            </div><!--row-->
        </div>
    </div>
</div>
