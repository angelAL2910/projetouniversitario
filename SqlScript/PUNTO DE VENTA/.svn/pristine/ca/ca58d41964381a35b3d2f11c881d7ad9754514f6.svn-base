@using STL.POS.Frontend.Web.NewVersion.CustomCode
@*@model Tuple<List<QuotationViewModel.Vehicles>, Dictionary<string, decimal?>, STL.POS.Frontend.Web.NewVersion.CustomCode.CommonEnums.RequestType>*@
@model  List<Requeriments>

@{
    int quotationID = ViewBag.QuoId;
}
<div class="card mdl-shadow--2dp mdl-cell mdl-cell--12-col float-left w-100 ml-0 mdl-shadow--4dp">
    <div class="card-header bg-info mdl-color-text--white text-center font-weight-bold">
        Documentos Requeridos
    </div>
    <div class="table-responsive p-3">
        <table class="table table-striped table-light text-center" id="tblDocumentRequireds" border="1">
            <thead>
                <tr class="bg-primary mdl-color-text--white">
                    <th scope="col">Obligatorio</th>
                    <th scope="col">Validado</th>
                    <th scope="col">Subido Por</th>
                    <th scope="col">Validado Por</th>
                    <th scope="col">Documento</th>
                    <th scope="col">Subir / Ver Documento</th>
                    <th scope="col">Borrar</th>
                </tr>
            </thead>
            <tbody>
                @{ foreach (var i in Model)
                    {
                        string cssRequired = i.Required ? "<i class=\"material-icons text-success\">check</i>" : "<i class=\"material-icons text-danger\">close</i>";
                        string cssValidate = i.Validated ? "<i class=\"material-icons text-success\">check</i>" : "<i class=\"material-icons text-danger\">close</i>";

                        string infoDoc = quotationID + "|" + i.DocumentId + "|" + i.RequirementTypeId + "|" + i.RequirementTypeDesc + "|" + i.PersonId
                            + "|" + i.VehicleId + "|" + i.DocumentName + "|" + (i.Validated ? "true" : "false");

                        <tr>
                            <td>
                                @Html.Raw(cssRequired)
                            </td>
                            <td>
                                @Html.Raw(cssValidate)
                            </td>
                            <td>
                                @Html.Raw(i.CreateUserName)
                            </td>
                            <td>
                                @Html.Raw(i.ValidatedUserName)
                            </td>
                            <td>
                                @Html.Raw(i.RequirementTypeDesc)
                            </td>
                            <td>
                                @if (!i.DocumentId.HasValue)
                                {
                                    <button class="mdl-button mdl-js-button mdl-button--icon mdl-button--colored btnUploadDoc" data-info="@infoDoc">
                                        <i class="material-icons text-info">file_upload</i>
                                    </button>
                                }
                                @if (i.DocumentId.HasValue)
                                {
                                    <button class="mdl-button mdl-js-button mdl-button--icon mdl-button--colored DocumentRequiredView btnUploadDoc" data-info="@infoDoc">
                                        <i class="material-icons text-info">remove_red_eye</i>
                                    </button>
                                }
                            </td>
                            <td>
                                @if (i.DocumentId.HasValue && !i.Validated)
                                {
                                    <button class="mdl-button mdl-js-button mdl-button--icon mdl-button--colored btnDeleteDoc" data-info="@infoDoc">
                                        <i class="material-icons text-danger">delete</i>
                                    </button>
                                }
                                else if (!i.DocumentId.HasValue || (i.DocumentId.HasValue && i.Validated))
                                {
                                    <button class="mdl-button mdl-js-button mdl-button--icon mdl-button--colored" disabled="disabled">
                                        <i class="material-icons text-gray">delete</i>
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>




<footer class="footer_cotiza_atl mdl-mega-footer  mt-3 bg-primary fixed-bottom p-2">
    <div class="container">
        <div class="mdl-mega-footer__top-section">

            <div class="mdl-mega-footer__left-section float-left">
                @Ajax.RawActionLink(string.Format("<i class='material-icons float-left mr-3'>arrow_back</i><strong class='x-hide mt-1 d-block float-left'>Atras</strong>"),
                                            "InfoAddVehicle",
                                            "Home",
                                             null,
                                             new AjaxOptions
                                             {
                                                 InsertionMode = InsertionMode.Replace,
                                                 UpdateTargetId = "dvContainer",
                                                 OnSuccess = "InitializeVehicle()"
                                             }, new
                                             {
                                                 @data = @ViewBag.QuoId,
                                                 @class = "btn btn-outline-info mb-1 mr-2 lh22 float-left"
                                             }
                                            )

                @if (ViewBag.onlyLoggedUsers == false)
                { <a href="#" target="_blank" id="uptocall-mini" class="float-left ml-2 mr-4"><i class="uptocall-mini-phone"></i></a>}
            </div>

            <div class="mdl-mega-footer__right-section float-right">
                <ul class="mdl-mega-footer__link-list mdl-color-text--white d-flex justify-content-center x-hide mb-0 mt-2 float-left">
                    <li><!-- <i class="fa fa-phone float-left mr-3"></i> --><strong>Tel: </strong> (809) 565-5591 &nbsp•&nbsp</li>
                    <li class="mr-3"> <!-- <i class="fa fa-envelope float-left mr-3" aria-hidden="true"></i> --> <strong> Email:</strong> ventas@atlantica.do</li>
                </ul>

                @if (ViewBag.isNotLawProduct == false)//es de ley
                {
                    @Ajax.RawActionLink("<strong class='x-hide d-block float-left mr-2'>Continuar</strong><i class='material-icons float-right ml-2'>arrow_forward</i>",
                        "_PaymentCheckout",
                        "Home",
                        null,
                        new AjaxOptions
                        {
                            UpdateTargetId = "dvContainer",
                            InsertionMode = InsertionMode.Replace,
                            OnBegin = "return allRequiredsDocWasCompleted()"
                        },
                        new
                        {
                            @class = "btn btn-outline-success mb-1 lh22 float-right"
                        }
                        )
                }
                else
                {
                    <button id="btnSendToGlobalOther" type="button" class="btn btn-outline-success mb-1 lh22">
                        <strong class='x-hide d-block float-left mr-2'>Continuar</strong><i class='material-icons float-right ml-2'>arrow_forward</i>
                    </button>
                }


                @*@Ajax.RawActionLink("<strong class='x-hide d-block float-left mr-2'>Continuar</strong><i class='material-icons float-right ml-2'>arrow_forward</i>",
                    "_PaymentCheckout",
                    "Home",
                    null,
                    new AjaxOptions
                    {
                        UpdateTargetId = "dvContainer",
                        InsertionMode = InsertionMode.Replace,
                        OnBegin = "return allRequiredsDocWasCompleted()"
                    },
                    new
                    {
                        @class = "btn btn-outline-success mb-1 lh22 float-right"
                    }
                    )*@

            </div>
        </div>
    </div>
</footer>
