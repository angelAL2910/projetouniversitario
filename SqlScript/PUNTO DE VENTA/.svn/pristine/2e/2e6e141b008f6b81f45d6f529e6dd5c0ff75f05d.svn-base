@using STL.POS.Frontend.Web.NewVersion.CustomCode
@{

    var qtyVehicles = ViewBag.totalVehicles;
    var totalVehiclesCompleted = ViewBag.totalVehiclesCompleted;
}

<div class="mdl-cell mdl-cell--12-col card w-100 ml-0 mdl-shadow--2dp">
    <div class="card-header bg-info mdl-color-text--white em1-3">Información Adicional Vehículo</div>
    <div class="card-body" id="setAditionalVehicleInfoForm">
        @Html.Hidden("hdnTotalVehicles", qtyVehicles == null ? 1 : (int)qtyVehicles)
        @Html.Hidden("hdnTotalVehiclesCompleted2", totalVehiclesCompleted == null ? 0 : (int)totalVehiclesCompleted)
        @Html.Partial("Vehicles")
    </div>
</div>

<div class="mdl-cell card w-100 ml-0 mdl-cell--12-col mdl-shadow--4dp mt-3 p-3">
    @if (ViewBag.onlyLoggedUsers == false)
    {
        <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent mdl-color-text--white text-capitalize p-0 mb-md-0 float-right ">
            <i class="material-icons">arrow_forward</i>Continuar con un Agente
        </button>
    }
</div>

<footer class="footer_cotiza_atl mdl-mega-footer  mt-3 bg-primary fixed-bottom p-2">
    <div class="container">
        <div class="mdl-mega-footer__top-section">

            <div class="mdl-mega-footer__left-section float-left">
                @if (((CommonEnums.RequestType)ViewBag.RequestType) == CommonEnums.RequestType.Emision)
                {
                    @Ajax.RawActionLink("<i class='material-icons float-left mr-3'>arrow_back</i><strong class='x-hide mt-1 d-block float-left'>Atras</strong>",
                                    "InfoAddDriver",
                                    "Home",
                                    null,
                                    new AjaxOptions
                                    {
                                        UpdateTargetId = "dvContainer",
                                        InsertionMode = InsertionMode.Replace,
                                        OnSuccess = "InitializeDriver()"
                                    },
                                           new { @class = "btn btn-outline-info mb-1 mr-2 float-left" })
                }
                else if (((CommonEnums.RequestType)ViewBag.RequestType) == CommonEnums.RequestType.Inclusion)
                {
                    @Ajax.RawActionLink(string.Format("<i class='material-icons float-left mr-3'>arrow_back</i><strong class='x-hide mt-1 d-block float-left'>Atras</strong>"),
                                      "Summary",
                                      "Home", null,
                                      new AjaxOptions
                                      {
                                          UpdateTargetId = "dvContainer",
                                          InsertionMode = InsertionMode.Replace,
                                          OnSuccess = "InitializeSummary()"
                                      },
                                           new { @class = "btn btn-outline-info mb-1 mr-2 float-left" })
                }

                @if (ViewBag.onlyLoggedUsers == false)
                {
                    <a href="#" target="_blank" id="uptocall-mini" class="float-left ml-2 mr-4"><i class="uptocall-mini-phone"></i></a>
                }

            </div>

            <div class="mdl-mega-footer__right-section float-right">
                <ul class="mdl-mega-footer__link-list mdl-color-text--white d-flex justify-content-center x-hide mb-0 mt-2 float-left">
                    <li><!-- <i class="fa fa-phone float-left mr-3"></i> --><strong>Tel: </strong> (809) 565-5591 &nbsp•&nbsp</li>
                    <li class="mr-3"> <!-- <i class="fa fa-envelope float-left mr-3" aria-hidden="true"></i> --> <strong> Email:</strong> ventas@atlantica.do</li>
                </ul>
                @if (ViewBag.isNotLawProduct == false)//es de ley
                {
                    //la logica deberia ser para cualqueir prduecto que aplique a subir requeridos, por ahora sera con las de ley

                    @Ajax.RawActionLink("<strong class='x-hide d-block float-left mr-2'>Continuar</strong><i class='material-icons float-right ml-2'>arrow_forward</i>",
                                          "DocumentRequired",
                                          "Home",
                                          null,
                                          new AjaxOptions
                                          {
                                              UpdateTargetId = "dvContainer",
                                              InsertionMode = InsertionMode.Replace,
                                              OnBegin = "return checkChassisOrPlateLaw()"
                                          },
                                          new
                                          {
                                              @class = "btn btn-outline-success mb-1 lh22 float-right btnSendToPaymentCheckOut"
                                          }
                                          )
                    //Original
                    @*@Ajax.RawActionLink("<strong class='x-hide d-block float-left mr-2'>Continuar</strong><i class='material-icons float-right ml-2'>arrow_forward</i>",
                                          "_PaymentCheckout",
                                          "Home",
                                          null,
                                          new AjaxOptions
                                          {
                                              UpdateTargetId = "dvContainer",
                                              InsertionMode = InsertionMode.Replace,
                                              OnBegin = "return checkChassisOrPlateLaw()"
                                          },
                                          new
                                          {
                                              @class = "btn btn-outline-success mb-1 lh22 float-right btnSendToPaymentCheckOut"
                                          }
                                          )*@
                }
                else
                {
                    <button id="btnSendToGlobal" type="button" class="btn btn-outline-success mb-1 lh22">
                        <strong class='x-hide d-block float-left mr-2'>Continuar</strong><i class='material-icons float-right ml-2'>arrow_forward</i>
                    </button>
                }
            </div>
        </div>

    </div>
</footer>

<script src="~/js/ControllersJs/InfoAddVehicle.js"></script>

