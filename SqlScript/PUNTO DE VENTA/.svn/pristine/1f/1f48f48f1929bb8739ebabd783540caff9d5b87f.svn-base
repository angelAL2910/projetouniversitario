@{
    ViewBag.Title = "Login | Servicio Xpress";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";

    var culture = System.Globalization.CultureInfo.CreateSpecificCulture(ViewBag.CurrentLanguage);
    System.Threading.Thread.CurrentThread.CurrentCulture = culture;
    System.Threading.Thread.CurrentThread.CurrentUICulture = culture;
}
@Scripts.Render("~/bundles/homeCountryBl")
<div class="row pdv_cont log_serv">
    <!-- COLUMNA IZQUIERDA -->
    <div class="data_side_L col-4">
        <div class="head_xpress"><i class="logoXpress"></i></div>
        <span class="txt_paso">@Globalization.Home.HomeIndex.Home_Index_StepTitle:</span>
        <div class="box_numb n1">
            <i class="numb_cicle">1</i>
            <span class="">@Globalization.Home.HomeIndex.Home_Index_Step1</span>
            <i class="flecha_dw"></i>
        </div>
        <div class="box_numb n2">
            <i class="numb_cicle">2</i>
            <span class="">@Globalization.Home.HomeIndex.Home_Index_Step2</span>
            <i class="flecha_dw"></i>
        </div>
        <div class="box_numb n3">
            <i class="numb_cicle">3</i>
            <span class="">@Globalization.Home.HomeIndex.Home_Index_Step3</span>
        </div>      
    </div><!--// .data_side_L -->
    <!--// COLUMNA IZQUIERDA -->
    <!-- COLUMNA CENTRAL -->
    <div class="data_main_R col-4"> </div>
    <!--// .data_main_R -->
    <!--// COLUMNA CENTRAL -->
    <!-- COLUMNA DERECHA -->
    <div class="bx_dr col-4">
        <div class="row_A mB20">
            <div class="centrodellamadas">
                <i class="icon24"></i>
                <div class="title">
                    <p class="centro" style="padding-top: 2px;">@Globalization.Home.HomeIndex.Home_Index_CallCenter</p>
                </div>
                <ul>
                    <li id="tel">(809) 565-5591</li>
                    <li id="email"><a href="/envienos-un-email">servicios@atlantica.do</a></li>
                </ul>
            </div>
        </div>
        <div class="cont_rosa inic">
            <div class="ttlStep  azul_pl">@Globalization.Home.HomeIndex.Home_Index_StartQuotTitle:</div>
            <div class="row_A">
                <label>@Globalization.Home.HomeIndex.Home_Index_StartQuotStep1:</label>
                <select data-bind="options:countries, optionsText: 'Global_Country_Desc', value: selectedCountry"></select>
            </div>
            <div class="row_A">
                <label>@Globalization.Home.HomeIndex.Home_Index_StartQuotStep2:</label>
                <select data-bind="options:businessLines, optionsText: 'Name', value: selectedBusinessLine"></select>
            </div>
            <div class="row_A alignC m0">
                <button class="button button-blue alignC embossed" data-bind="click: redirect">@Globalization.Home.HomeIndex.Home_Index_Quote</button>
            </div>


            @if (ViewBag.UserOrigin != null && ViewBag.UserOrigin == STL.POS.Data.UserOrigins.VO)
            {
                <a href="/Home/QuotationSearch?currentUserName=@User.Identity.Name" class="continuar">@Globalization.Home.HomeIndex.Home_Index_ContinueQuot</a>
            }
            else
            {
                <a href="/Home/SelectQuotation" class="continuar">@Globalization.Home.HomeIndex.Home_Index_ContinueQuot</a>
            }
        </div>
      
    </div><!--// .data_side_L -->
    <!--// COLUMNA DERECHA -->

</div>
<!--// Contenedor -->
<div class="bx_foot">&nbsp;</div>


<div class="modal cpopup popupError" id="errorContainerIndex" style="display:none">
    <p id="errorTitleIndex">
        Se han producido los siguientes errores:
    </p>
    <div class="popup02">
        <p id="errorMessageIndex" style="display: none;">
        </p>
        <div class="divTableScroll">
            <ul id="errorListIndex"></ul>
        </div>
        <button class="pbtn pb_red" onclick="$('#errorContainerIndex').hide();">Cerrar</button>
    </div>
</div>
