<script type="text/html" id="stepBuy2">
    <div class="select_buy2 info_ad_veh" data-bind="with: stepData">
        <form data-bind="submit: setAditionalVehicleInfo" id="setAditionalVehicleInfoForm">
            <div class="col-6 fl lb_azul">
                <div class="label_plus_input">
                    <span>@Globalization.PosAuto.StepBuy2.VehicleLabel</span>
                    <input type="text" class="" name="plate" data-bind="value: infoAdVehicle().selectedVehicleToStringStatic" disabled="disabled" />
                </div>
                <div class="label_plus_input">
                    <span>@Globalization.PosAuto.StepBuy2.VehicleTypeLabel</span>
                    <input type="text" class="" name="plate" data-bind="value: infoAdVehicle().selectedVehicleTypeNameStatic" disabled="disabled" />
                </div>
                <div class="label_plus_input">
                    <span>@Globalization.PosAuto.StepBuy2.BrandLabel</span>
                    <input type="text" name="brandName" data-bind="value: infoAdVehicle().selectedVehicleBrandNameStatic" disabled="disabled" />
                </div>
                <div class="label_plus_input">
                    <span>@Globalization.PosAuto.StepBuy2.ModelLabel</span>
                    <input type="text" name="modelName" data-bind="value: infoAdVehicle().selectedVehicleModelNameStatic" disabled="disabled" />
                </div>
                <div class="label_plus_input">
                    <span>@Globalization.PosAuto.StepBuy2.YearLabel</span>
                    <input type="text" value="" name="year" data-bind="value: infoAdVehicle().selectedVehicleYearStatic" disabled="disabled" />
                </div>

                @if (ViewBag.CurrentUserFullName != null)
                {
                    @*<!-- ko if: showOrNotEffectiveDate() == true -->*@
                    <div class="label_plus_input">
                        <span>@Globalization.PosAuto.StepBuy2.EffectiveDate</span>
                        <input id="effectivedate" type="text" class="datepicker effectivedate" name="effectivedate" readonly="readonly" data-bind="value: effectiveDate, css: { errorBorder: isRequiredEffectiveDate() }" />
                    </div>
                    @*<!-- /ko -->*@
                }
                else
                {
                    <div class="label_plus_input">
                        <span>@Globalization.PosAuto.StepBuy2.EffectiveDate</span>
                        <input id="effectivedate" type="text" class="datepicker effectivedate" name="effectivedate" readonly="readonly" disabled="disabled" data-bind="value: effectiveDate, css: { errorBorder: isRequiredEffectiveDate() }" />
                    </div>
                }

            </div>
            <div class="col-6 fl lb_azul">
                <div class="label_plus_input">
                    <span>@Globalization.PosAuto.StepBuy2.ChassisLabel</span>
                    <input type="text" value="" placeholder="@Globalization.Global.WriteHere" class="noWeirdChar2" name="chassis" data-bind="value: infoAdVehicle().chassis, css: {errorBorder: !infoAdVehicle().chassis()}" />
                </div>
                <div class="label_plus_input">
                    <span>@Globalization.PosAuto.StepBuy2.PlateLabel</span>
                    <input type="text" placeholder="@Globalization.Global.WriteHere" class="noWeirdChar2" name="plate" data-bind="value: infoAdVehicle().plate, css: {errorBorder: !infoAdVehicle().plate()}" />
                </div>
                <div class="label_plus_input">
                    <span>@Globalization.PosAuto.StepBuy2.ColorLabel</span>
                    <select name="color" data-bind="options: $root.colorList, optionsText: 'name', optionsValue: 'id', value: infoAdVehicle().color, optionsCaption: '@Globalization.Global.Select', css: {errorBorder: !infoAdVehicle().color()}"></select>
                </div>
                @*<div class="label_plus_input">
                        <span>@Globalization.PosAuto.StepBuy2.UsageLabel</span>
                        <select name="usage" data-bind="options: currentProductUsageList(), optionsText: 'name', optionsValue: 'id', value: infoAdVehicle().usage, optionsCaption: '@Globalization.Global.Select', css: {errorBorder: !infoAdVehicle().usage() && $('#UsageInvalid').val() == 'False'}"></select>
                    </div>*@
                <div class="label_plus_input">
                    <span>@Globalization.PosAuto.StepBuy2.DriverLabel</span>
                    <select name="driver" data-bind="options: drivers, optionsText: 'toString', optionsValue: 'id', value: infoAdVehicle().driver, optionsCaption: '@Globalization.Global.Select', css: {errorBorder: !infoAdVehicle().driver()}"></select>
                </div>

                <div class="label_plus_input">
                    <span>@Globalization.PosAuto.StepBuy2.NumeroFormulario</span>
                    <input type="text" value="" placeholder="@Globalization.Global.WriteHere" name="NumeroFormulario" data-bind="value: infoAdVehicle().NumeroFormulario" />
                </div>

                @if (ViewBag.CurrentUserFullName != null)
                {
                    <div class="label_plus_input">
                        <span>@Globalization.PosAuto.StepBuy2.EffectiveDateEnd</span>
                        <input id="effectivedateend" type="text" class="datepicker effectivedateend" name="effectivedateend" readonly="readonly" data-bind="value: effectiveDateEnd, css: { errorBorder: isRequiredEffectiveDateEnd() }" />
                    </div>
                }
                else
                {  <div class="label_plus_input">
                    <span>@Globalization.PosAuto.StepBuy2.EffectiveDateEnd</span>
                    <input id="effectivedateend" type="text" class="datepicker effectivedateend" name="effectivedateend" readonly="readonly" disabled="disabled" data-bind="value: effectiveDateEnd, css: { errorBorder: isRequiredEffectiveDateEnd() }" />
                </div>
                }



                <div class="label_plus_input par">
                    <span>@Globalization.PosAuto.StepBuy3.PaymentFreqLabel</span>

                    <!-- ko if: GetSelectedVehicleType() == true -->
                    <select name="applicantFrequency" id="applicantWayToPay" data-bind="options: payment.frequencyListMotor, optionsText: 'name', optionsValue: 'id', optionsCaption: '@Globalization.Global.Select', value: payment.applicant.frequency, css: {errorBorder: payment.applicant.frequency()==undefined}"></select>
                    <!-- /ko -->
                    <!-- ko if: GetSelectedVehicleType() == false -->
                    <select name="applicantFrequency" id="applicantWayToPay" data-bind="options: payment.frequencyList, optionsText: 'name', optionsValue: 'id', optionsCaption: '@Globalization.Global.Select', value: payment.applicant.frequency, css: {errorBorder: payment.applicant.frequency()==undefined}"></select>
                    <!-- /ko -->
                </div>
            </div>


            <div class="pventa">
                <div class="row_A alignC mT10 mB10 bbFuntion">
                    <div class="col-2 fl"><a class="back_btn" href="#" data-bind="click: function() { parent.prevStep(); }"><i class="flecha_iz_az"></i>@Globalization.PosAuto.StepVehicleCoverage.BackButtonLabel</a></div>

                    <div class="col-4 fl">&nbsp;</div>

                    <!-- ko if: getStepStatus($root.currentStepId()) == stepStatuses.COMPLETED || vehicles().length == 1 -->
                    <div class="col-3 fr">
                        <a href="#" class="button button-blue alignC embossed row_A" data-bind="click: fifthStepAdvance">@Globalization.PosAuto.StepBuy2.ContinueLabel</a>
                    </div>
                    <!-- /ko -->

                    <div class="col-3 fr">
                        <input type="submit" style="white-space: normal;" class="button button-blue alignC embossed row_A" data-bind="value: '@Globalization.PosAuto.StepBuy2.NextVehicleLabel', visible: vehicles().length > 1" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</script>