<script type="text/html" id="stepBuy3">

    <div class="select_buy3 pagoDll" data-bind="with: stepData">
        <form data-bind="submit: pay" id="payForm">
            <div class="col-6 fl cont_gnl">
                <div class="labelBlue"><!-- ko if: payment.applicant.wayToPay() == 1 -->Efectivo<!--/ko--><!-- ko if: payment.applicant.wayToPay() == 2 -->Tarjeta de Cr&eacute;dito/D&eacute;bito<!--/ko--><!-- ko if: payment.applicant.wayToPay() == 4 -->ACH<!--/ko--></div>
                <div class="label_plus_input par">
                    <span>Forma de Pago</span>
                    <select name="applicantWayToPay" id="applicantWayToPay" data-bind="options: $root.wayToPayList, optionsText: 'name', optionsValue: 'id', value: payment.applicant.wayToPay"></select>
                </div>

                <!-- ko if: payment.applicant.wayToPay() == 2 -->
                <div class="col-12 sipaga mT20">
                    <p>Se aceptan pagos de tarjetas VISA y Mastercard.</p>
                </div>
                <!--/ko-->

                <!-- ko if: payment.applicant.wayToPay() == 4 -->
                <!-- ACH -->
                <div class="label_plus_input par">
                    <span>Nombre del Cuenta Habiente</span>
                    <input type="text" placeholder="Escriba Aquí" name="achName" data-bind="value: payment.ach.name, css: {errorBorder: !payment.ach.name()}" />
                </div>
                <div class="label_plus_input par">
                    <span>No. Identificación Cuenta Habiente</span>
                    <input type="text" placeholder="Escriba Aquí" name="achAccountHolderGovernmentId" data-bind="value: payment.ach.achAccountHolderGovernmentId, css: {errorBorder: !payment.ach.achAccountHolderGovernmentId()}" />
                </div>
                <div class="label_plus_input par">
                    <span>Número de Ruta</span>
                    <input type="text" placeholder="Escriba Aquí" name="achBankRoutingNumber" data-bind="value: payment.ach.achBankRoutingNumber, css: {errorBorder: !payment.ach.achBankRoutingNumber()}" />
                </div>
                <div class="label_plus_input par">
                    <span>Tipo de Cuenta</span>
                    <select name="achType" data-bind="options: $root.typeAccounts, optionsText: 'name', optionsValue: 'id', value: payment.ach.type, css: {errorBorder: payment.ach.type() < 0 }"></select>
                </div>
                <div class="label_plus_input par">
                    <span>N&uacute;mero de Cuenta</span>
                    <input type="text" placeholder="Escriba Aquí" name="achNumber" data-bind="value: payment.ach.number, css: {errorBorder: !payment.ach.number()}" />
                </div>
                <!-- /ko -->

                <!-- ko if: payment.applicant.wayToPay() == 1 -->
                <!-- Efectivo -->
                <div class="col-12 sipaga mT20">
                    <p>Hola.</p>
                </div>
                <!-- /ko -->


            </div>
            <div class="col-6 fl cont_gnl">
                <div class="labelBlue"><i class="pay_ico"></i>Detalle de Pago</div>
                <div class=" row_A" id="BoxPay">

                    <div class="label_plus_input par">
                        <span>Prima Total</span>
                        <input type="text" placeholder="Escriba Aquí" name="totalPrime" data-bind="value: totalPrime.formatted" disabled="disabled" />
                    </div>
                    <div class="label_plus_input par">
                        <span>Frecuencia de Pago</span>
                        <select name="applicantFrequency" id="applicantWayToPay" data-bind="options: payment.frequencyList, optionsText: 'name', optionsValue: 'id', value: payment.applicant.frequency"></select>
                    </div>
                    <div class="label_plus_input par">
                        <span>Descuento</span>
                        <input type="text" placeholder="Escriba Aquí" name="totalDiscount" data-bind="value: totalDiscount.formatted" disabled="disabled" />
                    </div>

                    <div class="label_plus_input par">
                        <span>Impuestos</span>
                        <input type="text" placeholder="Escriba Aquí" name="totalIsc" data-bind="value: totalIsc.formatted" disabled="disabled" />
                    </div>

                    <div class="label_plus_input par">
                        <span>Total</span>
                        <input type="text" placeholder="Escriba Aquí" name="totalToPay" data-bind="value: totalToPay.formatted" disabled="disabled" />
                    </div>

                    <div class="label_plus_input par">
                        <span>Monto a Pagar</span>
                        <input type="text" placeholder="Escriba Aquí" class="bg_grd_vd" name="amountToPayEntered" id="payment.amountToPayEntered" data-bind="value: payment.amountToPayEntered.formatted, css: {errorBorder: !payment.amountToPayEntered()}" />
                        <input type="hidden" id="minAllowedAmountToPay" data-bind="value: minAllowedAmountToPay" />
                        <input type="hidden" id="maxAllowedAmountToPay" data-bind="value: totalToPay" />
                    </div>

                    <div class="row_A">
                        <input type="submit" class="btn bgreen fr pagar_btn" value="Pagar" />
                    </div>

                </div>
            </div>
            
        </form>
        <br clear="all" />
        <div class="row_A mT10 mB10">
            <a href="#" class="btn backBtn" data-bind="click: function() { parent.prevStep(); isfirstLoadBF(false); $('.PepPOP').hide(); $('.IdentificationFinalBeneficiaryPOP').hide();}"></a>
        </div>
    </div>



</script>