.dataTables_filter, .dataTables_info {
    display: none;
}

.loading:before {
    content: '';
    background-color: #fff;
    left: 0;
    top: 0;
    opacity: 0.8;
    width: 100%;
    height: 100%;
    z-index: 8000;
    position: fixed;
}

.loading:after {
    content: '';
    position: fixed;
    background: url(/Content/images/loading.gif) no-repeat center center;
    width: 80px;
    height: 80px;
    background-size: 100%;
    left: 48%;
    top: 48%;
    z-index: 9000;
}

.ui-widget-header {
    border: 1px solid #868e96 !important;
    background: #868e96 url("images/ui-bg_flat_75_5d82cb_40x100.png") 50% 50% repeat-x !important;
    color: #FFFFFF !important;
}

@media (min-width: 576px) {
    .modal-notification {
        max-width: 500px;
    }
