/**
----------------------------------------------------------------------------------
--------------         TABS PRINCIPALES DE LA APLICACION        ------------------
----------------------------------------------------------------------------------
**/
.contenedor_tabs {
    text-transform: uppercase;
    font-size: 12px;
    border: 1px solid #c6c6c6;
    margin-bottom: 2px;
}
.contenedor_tabs ul.tabs_ttle {
    display: table;
    width: 100%;
    margin: 0;
    border: 0;
    background: #CCCCCC;
    border-left: 1px solid #FFF;
    padding: 0;
}
.contenedor_tabs ul.tabs_ttle li {
    display: block;
    width: 10%;
}
.contenedor_tabs ul.tabs_ttle li a {
    color: black;
    display: block;
    height: 100%;
    padding-top: 10px;
    width: 100%;
}
.contenedor_tabs ul.tabs_ttle li a:hover {
    text-decoration: none;
}
.contenedor_tabs ul.tabs_ttle li.active a {
    color: white;
    display: block;
    height: 100%;
    padding-top: 15px;
    width: 100%;
}
.contenedor_tabs ul.tabs_ttle li {
    background: #f2f2f2;
    background: -moz-linear-gradient(top, #f2f2f2 0%, #afafaf 100%);
    background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#f2f2f2), color-stop(100%,#afafaf));
    background: -webkit-linear-gradient(top, #f2f2f2 0%,#afafaf 100%);
    background: -o-linear-gradient(top, #f2f2f2 0%,#afafaf 100%);
    background: -ms-linear-gradient(top, #f2f2f2 0%,#afafaf 100%);
    background: linear-gradient(to bottom, #f2f2f2 0%,#afafaf 100%);
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#f2f2f2', endColorstr='#afafaf',GradientType=0 );
    border-right: 1px solid #FFF;
    border-top: 1px solid #FFF;
    cursor: pointer;
    display: table-cell;
    height: 50px;
    position: relative;
    text-align: center;
    overflow: hidden;
    vertical-align: middle;
}
.contenedor_tabs ul.tabs_ttle li.disable {
    background-image: -webkit-gradient(linear, left top, left bottom, from(white), color-stop(60%, #e9ecef), to(#dde2e6));
    background-image: linear-gradient(white, #e9ecef 60%, #dde2e6);
    background-repeat: no-repeat;
}
.contenedor_tabs ul.tabs_ttle li.disable a {
    color: #ccc;
}
.contenedor_tabs ul.tabs_ttle li.active,
.contenedor_tabs ul.tabs_ttle li.active:hover {
    background: rgba(136,127,101,1);
	background: -moz-linear-gradient(top, rgba(136,127,101,1) 0%, rgba(67,51,21,1) 100%);
	background: -webkit-gradient(left top, left bottom, color-stop(0%, rgba(136,127,101,1)), color-stop(100%, rgba(67,51,21,1)));
	background: -webkit-linear-gradient(top, rgba(136,127,101,1) 0%, rgba(67,51,21,1) 100%);
	background: -o-linear-gradient(top, rgba(136,127,101,1) 0%, rgba(67,51,21,1) 100%);
	background: -ms-linear-gradient(top, rgba(136,127,101,1) 0%, rgba(67,51,21,1) 100%);
	background: linear-gradient(to bottom, rgba(136,127,101,1) 0%, rgba(67,51,21,1) 100%);
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#887f65', endColorstr='#433315', GradientType=0 );
    color: #FFF;
}

