@model  Declarative.Invoicing.Models.DeclarativeInvoicingViewModel.InvoicingResume
<div class="row">
    <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
        <div class="card card-statetrust">
            <div class="card-header">
                <i class="fas fa-file-invoice-dollar"></i>
                Periodo de facturación
            </div>
            <div class="card-body">
                <div class="text-center">
                    <h1>@Html.Raw(Model.InvoicingPeriod)</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
        <h5>
            <i class="fas fa-file-invoice-dollar"></i>
            Resumen
        </h5>
        <div class="table-responsive">
            <table class="table table-striped2">
                <tbody>
                    <tr>
                        <td class="text-right">Subtotal</td>
                        <td class="text-right">@Html.Raw("RD$ " + Model.SubTotal)</td>
                    </tr>
                    <tr>
                        <td class="text-right">ITBIS</td>
                        <td class="text-right">@Html.Raw("RD$ " + Model.Itbis)</td>
                    </tr>
                    <tr>
                        <td class="text-right">Total a Pagar</td>
                        <td class="text-right">@Html.Raw("RD$ " + Model.TotalToPay)</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>