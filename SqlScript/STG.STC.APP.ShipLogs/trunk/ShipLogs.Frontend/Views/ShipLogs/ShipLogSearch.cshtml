<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <h2>Ship Logs List Filters</h2>
    <div class="panel panel-success filterable">
        @*<div class="panel-heading">
                <h3 class="panel-title">SEARCH PANEL</h3>
                <div class="pull-right"></div>
            </div>*@
        <div class="panel-body">
            <table id="ShipdataTables" name="ShipdataTables" class="table table-striped table-light text-center float-left w-100" cellspacing="0" style="width:100%!important; min-width:1000px;">
                <thead>
                    <tr>
                        <th>Carrier</th>
                        <th>Shipment Number</th>
                        <th>Date</th>
                        <th>Sender</th>
                        <th>Receiver</th>
                        <th>Log Type</th>
                        <th class="text-center">Opciones</th>
                    </tr>
                </thead>
                <tbody id="ShipdataTablesBody">
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td class="text-left">@x.CarrierName.TrimEnd().TrimStart()</td>
                            <td class="text-left">@x.ShipmentNumber</td>
                            <td class="text-left">@x.ShipmentDate.GetValueOrDefault().ToString("dd/MM/yyyy")</td>
                            <td class="text-left">@x.Sender</td>
                            <td class="text-left">@x.Receiver</td>
                            <td class="text-left">@x.IncomingLiteral</td>

                            <td>
                                <input type="button" id="txtSearch" value="Edit" onclick="CargarShipLogsjs('@HttpUtility.UrlEncode(Url.Encode(Tools.Encode(Newtonsoft.Json.JsonConvert.SerializeObject(x.ShipUniqueID))))')" class="btn btn-warning" title="Edit" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>