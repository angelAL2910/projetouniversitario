@model List<WebApplication7.Models.Shipment>
<hr />
<hr /> 
<h2>Ship Logs List Filters</h2>
<h3>Cantidad de Registro @ViewBag.conteo</h3>
<div class="container">
    <div class="row">

        <table class="table">
            <thead>
                <tr class="filters">
                    <th>
                        Carrier Name
                        <select id="Carrier-filter" class="form-control">
                            <option value="">Seleccionar</option>
                            <option value="DHL">DHL</option>
                            <option value="FedEx">FedEx</option>
                            <option value="UPS">UPS</option>
                            <option value="USPS">USPS</option>
                            <option value="Personal">Personal</option>
                        </select>
                    </th>
                    <th>
                        Shipment Number
                        @Html.DropDownList("ShipmentNumber", (SelectList)ViewBag.ShipmentNumber, "", new { @class = "dropdown form-control", @data_placeholder = "Shipment Number" })

                    </th>
                    <th>
                        Sender
                        @Html.DropDownList("ShipmentSender", (SelectList)ViewBag.Sender, "", new { @class = "dropdown form-control", @data_placeholder = "Shipment Sender" })

                    </th>
                    <th>
                        Receiver
                        @Html.DropDownList("ShipmentReceiver", (SelectList)ViewBag.Receiver, "", new { @class = "dropdown form-control", @data_placeholder = "Shipment Receiver" })

                    </th>
                    <th>
                        Log Type
                        <select id="tags-filter" class="form-control">
                            <option>None</option>
                            <option value="true">Incoming</option>
                            <option value="false">Ougoing</option>

                        </select>
                    </th>
                </tr>
            </thead>
        </table>
        <div class="panel panel-success filterable">
            <div class="panel-heading">
                <h3 class="panel-title">Tasks</h3>
                <div class="pull-right"></div>
            </div>
            <table id="task-list-tbl" class="table">
                <thead>
                    <tr>
                        <th>Carrier Name</th>
                        <th>Account Number</th>
                        <th>Shipment Number</th>
                        <th>Shipment Date</th>
                        <th>Ship Package Type</th>
                        <th>Sender</th>
                        <th>Receiver</th>
                        <th>Opciones</th>
                    </tr>
                </thead>

                <tbody>

                    @foreach (var a in Model)
                    {

                        <tr>
                            <td>@a.CarrierName</td>
                            <td>@a.AccountNumber</td>
                            <td>@a.ShipmentNumber</td>
                            <td>@a.ShipmentDate</td>
                            <td>@a.ShipPackageType</td>
                            <td>@a.Sender</td>
                            <td>@a.Receiver</td>
                            <td>
                                <input type="button" id="txtSearch" value="Edit" onclick="CargarShipLogsjs('@HttpUtility.UrlEncode(Url.Encode(Tools.Encode(Newtonsoft.Json.JsonConvert.SerializeObject(a.ShipUniqueID))))')" class="btn btn-warning" title="Edit" />
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>
