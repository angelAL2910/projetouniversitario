        public void FillData()
        {
            txtAnnualPremium.Text = ObjServices.annualPremium.HasValue ? ObjServices.annualPremium.GetValueOrDefault().ToString("#,0.00", CultureInfo.InvariantCulture) : "0.00";
            txtMonthlyPayment.Text = ObjServices.MonthlyPayment.HasValue ? ObjServices.MonthlyPayment.GetValueOrDefault().ToString("#,0.00", CultureInfo.InvariantCulture) : "0.00";
            txtPeriod.Text = ObjServices.Period.HasValue ? ObjServices.Period.GetValueOrDefault().ToString("#,0.00", CultureInfo.InvariantCulture) : "0.00";

            var DataResult = ObjServices.oPolicyGlobalService.ksiCalculator(new WebServices.GlobalService.PolicyksiCalculatorparameter
             {
                 DesiredAmount = (double)ObjServices.annualPremium.GetValueOrDefault(),
                 LoanType = WebServices.GlobalService.LoanType.VehicleInsurance,
                 Periods = ObjServices.Period.GetValueOrDefault()
             });

            var hasError = ObjServices.ErrorCode.Contains(DataResult.Code);

            if (!hasError)
            {
                var Table = DataResult.productCalculatorResult.AmotizationTable;
                gvAmortizationTable.DatabindAspxGridView(Table);
            }
        }

        public void Initialize()
        {
            ClearData();
            FillData();
