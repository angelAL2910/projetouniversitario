@model KSI.Cobranza.Web.Models.ViewModels.CorrespondenceViewModels
@{
    var webDocumentList = new WebGrid(source: Model.TemplateDocuments, ajaxUpdateContainerId: "dvDocumentList", canPage: true);
    var webdvAttachedFiles = new WebGrid(source: Model.AttachedFiles, ajaxUpdateContainerId: "dvDocumentList", canPage: true);
}
<div class="row  row-eq mb20">
    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12 row-eq">
        <div class="panel panel-info col-eq">
            <div class="panel-heading">
                <h3 class="panel-title">
                    SELECCIONAR NO. DE CASO
                </h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="CaseNumber">No. de Caso:</label>
                            @Html.TextBoxFor(o => o.CaseNumber, new { @class = "form-control", @disabled = "disabled", id = "txtCaseNumber" })
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="LoanNumber">No. de Préstamo:</label>
                            @Html.TextBoxFor(o => o.LoanNumber, new { @class = "form-control", @disabled = "disabled", id = "txtLoanNumber" })
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="ProductType">Tipo de Producto:</label>
                            @Html.TextBoxFor(o => o.ProductType, new { @class = "form-control", @disabled = "disabled", id = "txtProductType" })
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="CompanyID">Tipo de Caso:</label>
                            @Html.TextBoxFor(o => o.CaseType, new { @class = "form-control", @disabled = "disabled", id = "txtCaseType" })
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="Department">Departamento:</label>
                            @Html.TextBoxFor(o => o.Department, new { @class = "form-control", @disabled = "disabled", id = "txtDepartment" })
                        </div>
                    </div>
                </div><!--row-->
            </div>
        </div>

        <div class="panel panel-info col-eq">
            <div class="panel-heading">
                <h3 class="panel-title">
                    SELECCIONAR TEMPLATE
                </h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="table-responsive">
                            <div id="dvDocumentList">
                                @webDocumentList.GetHtml(tableStyle: "table table-striped car PhoneMail",
                                                      headerStyle: "header-table",
                                             htmlAttributes: new { @id = "gvDocument" },
                                                               columns: webDocumentList.Columns(
                                                                                                webDocumentList.Column("DocumentName", "Nombre del documento")

                                                                                                        )
                                                                                                        )

                            </div>
                        </div>
                    </div>
                </div><!--row-->
            </div>
        </div>

        <div class="panel panel-info col-eq">
            <div class="panel-heading">
                <h3 class="panel-title">
                    PARÁMETROS
                </h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="CommissionTableName">Saldo al Día:</label>
                            <div class="form-group input-group buscar">
                                <input type="text" class="form-control">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">
                                        <i class="fa fa-calendar"></i>
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>

                </div><!--row-->
            </div>
        </div>

        <div class="panel panel-info col-eq">
            <div class="panel-heading">
                <h3 class="panel-title">
                    INFORMACIÓN DEL CORREO
                </h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                        <div class="form-group checkbox">
                            <label for="MailInformation.PrimaryCustomer" class="textb"><input type="checkbox" value="">Cliente Primario:</label>
                            @Html.TextBoxFor(o => o.MailInformation.PrimaryCustomer, new { @class = "form-control", @disabled = "disabled", id = "txtPrimaryCustomer" })
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                        <div class="form-group checkbox">
                            <label for="MailInformation.SecundaryCustomer" class="textb"><input type="checkbox" value="">Cliente Secundario:</label>
                            @Html.TextBoxFor(o => o.MailInformation.SecundaryCustomer, new { @class = "form-control", @disabled = "disabled", id = "txtSecundaryCustomer" })
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                        <div class="form-group checkbox">
                            <label for="MailInformation.PrimaryAgent" class="textb"><input type="checkbox" value="">Agente Primario:</label>
                            @Html.TextBoxFor(o => o.MailInformation.PrimaryAgent, new { @class = "form-control", @disabled = "disabled", id = "txtPrimaryAgent" })
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                        <div class="form-group checkbox">
                            <label for="CompanyID" class="textb"><input type="checkbox" value="">Oficina:</label>
                            @Html.TextBoxFor(o => o.MailInformation.Office, new { @class = "form-control", @disabled = "disabled", id = "txtOffice" })
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                        <div class="form-group checkbox">
                            <label for="MailInformation.Provider" class="textb"><input type="checkbox" value="">Proveedor:</label>
                            @Html.TextBoxFor(o => o.MailInformation.Provider, new { @class = "form-control", @disabled = "disabled", id = "txtOffice" })
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                        <div class="form-group checkbox">
                            <label for="CompanyID" class="textb"><input type="checkbox" value="">Extra:</label>
                            @Html.TextBoxFor(o => o.MailInformation.Provider, new { @class = "form-control", @disabled = "disabled", id = "txtOffice" })
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                        <div class="form-group checkbox">
                            <label for="o.MailInformation.DepartmentId" class="textb"><input type="checkbox" value="">Departamento:</label>
                            @Html.DropDownListFor(o => o.MailInformation.DepartmentId, Model.MailInformation.Departments.Select(x => new SelectListItem { Text = x.Value, Value = x.Key }), "Seleccione un...", new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="MailInformation.SubjectId">Asunto:</label>
                            @Html.DropDownListFor(o => o.MailInformation.SubjectId, Model.MailInformation.Subjects.Select(x => new SelectListItem { Text = x.Value, Value = x.Key }), "Seleccione un...", new { @class = "form-control" })
                        </div>
                    </div>

                </div><!--row-->
            </div>
        </div>

        <div class="panel panel-info col-eq">
            <div class="panel-heading">
                <h3 class="panel-title">
                    SELECCIONAR PRINCIPAL
                </h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                        <div class="form-group radio">
                            <label for="PrincipalCustomer" class="textb">
                                <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
                                Cliente:
                            </label>
                            @Html.TextBoxFor(o => o.PrincipalCustomer, new { @class = "form-control", @disabled = "disabled", id = "txtPrincipalCustomer" })
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                        <div class="form-group radio">
                            <label for="PrincipalAgent" class="textb">
                                <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
                                Agente:
                            </label>
                            @Html.TextBoxFor(o => o.PrincipalAgent, new { @class = "form-control", @disabled = "disabled", id = "txtPrincipalAgent" })
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                        <div class="form-group radio">
                            <label for="PrincipalOffice" class="textb">
                                <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
                                Oficina:
                            </label>
                            @Html.TextBoxFor(o => o.PrincipalOffice, new { @class = "form-control", @disabled = "disabled", id = "txtPrincipalOffice" })
                        </div>
                    </div>

                </div><!--row-->
            </div>
        </div>

        <div class="panel panel-info col-eq">
            <div class="panel-heading">
                <h3 class="panel-title">
                    SEGUIMIENTO
                </h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <div class="checkbox ">
                                <label class="textb">
                                    <input type="checkbox" value="">Agregar el Seguimiento
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="CompanyID">Asignar Seguimiento:</label>
                            @Html.DropDownListFor(o => o.Tracing.TracingTypeId, Model.Tracing.TracingTypes.Select(x => new SelectListItem { Text = x.Value, Value = x.Key }), "Seleccione un...", new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="Tracing.TracingDate">Fecha de Seguimiento:</label>
                            <div class="form-group input-group buscar">
                                @Html.TextBoxFor(o => o.Tracing.TracingDate, new { @class = "form-control datepicker", id = "txtTracingDate" })
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">
                                        <i class="fa fa-calendar"></i>
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="Tracing.Tracinghour">Hora de Seguimiento:</label>
                            @Html.TextBoxFor(o => o.Tracing.Tracinghour, new { @class = "form-control", @disabled = "disabled", id = "txtTracinghour" })
                        </div>
                    </div>
                </div><!--row-->
            </div>
        </div>

        <div class="panel panel-info col-eq">
            <div class="panel-heading">
                <h3 class="panel-title">
                    ADJUNTAR DOCUMENTO
                </h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="CompanyID">Grupos de Documentos:</label>
                            @Html.DropDownListFor(o => o.DocumentGroupId, Model.DocumentsGroup.Select(x => new SelectListItem { Text = x.Value, Value = x.Key }), "Seleccione un...", new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="CompanyID">Tipos de Documentos:</label>
                            @Html.DropDownListFor(o => o.DocumentTypeId, Model.DocumentsTypes.Select(x => new SelectListItem { Text = x.Value, Value = x.Key }), "Seleccione un...", new { @class = "form-control" })
                        </div>
                    </div>
                </div><!--row-->

                <div class="row mb20">
                    <div class="col-lg-3 col-md-4 col-sm-12 col-xs-12">
                        <button id="btnNuevo" class="btn btn-primary-st btn-block">
                            <i class="fa fa-file-text-o" aria-hidden="true"></i>
                            Seleccionar Archivo
                        </button>
                    </div>

                    <div class="col-lg-3 col-md-4 col-sm-12 col-xs-12">
                        <button class="btn btn-success btn-block">
                            <i class="fa fa-upload" aria-hidden="true"></i>
                            Cargar
                        </button>
                    </div>
                </div><!--row-->

                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="table-responsive">
                            <div id="dvAttachedFiles">
                                @webdvAttachedFiles.GetHtml(tableStyle: "table table-striped car PhoneMail",
                                                      headerStyle: "header-table",
                                                      htmlAttributes: new { @id = "gvAttachedFiles" },
                                                      columns: webDocumentList.Columns(
                                                                                         webdvAttachedFiles.Column("DocumentTypeDesc", "TIPO DE DOCUMENTO"),
                                                                                         webdvAttachedFiles.Column("FileName", "NOMBRE ARCHIVO")
                                                                                      ))

                            </div>
                        </div>
                    </div>
                </div><!--row-->
            </div>
        </div>
    </div>

    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 row-eq ">
        <div class="panel panel-info col-eq">

        </div>
    </div>
</div><!--row-->

<div class="row">
    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12"></div>
    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <button id="btnNuevo" class="btn btn-danger btn-block">
                    <i class="fa fa-times" aria-hidden="true"></i>
                    Cancelar
                </button>
            </div>

            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <button class="btn btn-info btn-block">
                    <i class="fa fa-arrow-right" aria-hidden="true"></i>
                    Enviar Template
                </button>
            </div>
        </div>
    </div>
</div><!--row-->
