@model IEnumerable<KSI.Cobranza.Web.Models.ViewModels.EmailAddress>
@{
    var webGridEmails = new WebGrid(source: Model, ajaxUpdateContainerId: "dvGridEmails", canPage: true);
                        
}
<div class="panel panel-success col-eq">
    <div class="panel-heading">
        <h3 class="panel-title">
            <i class="fa fa-envelope fa-fw"></i>Dirección Electrónica
        </h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="table-responsive">
                    <div id="dvGridEmails">
                        @webGridEmails.GetHtml(tableStyle: "table table-striped car PhoneMail",
                                             headerStyle: "header-table",
                                             htmlAttributes: new { @id = "gvEmails" },
                                                columns: webGridEmails.Columns(
                                                        webGridEmails.Column("Type", "Tipo"),
                                                        webGridEmails.Column("address", "Email"),
                                                        webGridEmails.Column(header: "Principal", format: @<text><input id="select" class="box" name="select" type="checkbox" onclick='CheckPrimaryEmail(@item.CustomerId,@item.contactEmailId)' @(item.IsPrimary ? "checked='checked'" : "") /></text>, style: "text-center")
                       )
                    )
                    </div>

                </div>
            </div>
        </div><!--row-->
        <div class="row mb20">
            <div class="col-lg-8 col-md-6 col-sm-12 col-xs-12"></div>
            <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <button class="btn btn-success btn-block" type="button" id="btnAddEmail" onclick="GetEmailView($('#CustomerId').val())">
                            <i class="fa fa-plus" aria-hidden="true"></i>
                            Agregar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>